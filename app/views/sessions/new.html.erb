        <div class="form-control mt-2">
          <%= submit_tag t("common.login"), class: "btn btn-primary w-full" %>
        </div>
      <% end %>

      <!-- ÌöåÏõêÍ∞ÄÏûÖ ÎßÅÌÅ¨ -->
