<% content_for :title, t("auth.login.page_title") %>

<div class="min-h-screen flex items-center justify-center p-4">
  <div class="card bg-base-100 shadow-xl w-full max-w-md">
    <div class="card-body">
      <!-- Î°úÍ≥† & ÌÉÄÏù¥ÌãÄ -->
      <div class="text-center mb-6">
        <div class="text-6xl mb-4">üèÄ</div>
        <h1 class="text-3xl font-bold"><%= t("auth.login.title") %></h1>
        <p class="text-base-content/60 mt-2"><%= t("auth.login.subtitle") %></p>
      </div>

      <!-- Î°úÍ∑∏Ïù∏ Ìèº -->
      <%= form_with url: session_path, method: :post, local: true, class: "space-y-4" do %>
        <div class="form-control w-full">
          <label class="label" for="email">
            <span class="label-text"><%= t("auth.fields.email") %></span>
          </label>
          <%= email_field_tag :email, params[:email],
              required: true,
              autocomplete: "email",
              placeholder: "your@email.com",
              class: "input input-bordered w-full" %>
        </div>

        <div class="form-control w-full">
          <label class="label" for="password">
            <span class="label-text"><%= t("auth.fields.password") %></span>
          </label>
          <%= password_field_tag :password, nil,
              required: true,
              autocomplete: "current-password",
              placeholder: "‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢",
              class: "input input-bordered w-full" %>
        </div>

        <div class="form-control mt-6">
          <%= submit_tag t("common.login"), class: "btn btn-primary btn-lg w-full" %>
        </div>
      <% end %>

      <!-- ÌöåÏõêÍ∞ÄÏûÖ ÎßÅÌÅ¨ -->
      <div class="divider"><%= t("common.or", default: "OR") %></div>

      <div class="text-center">
        <span class="text-base-content/60"><%= t("auth.login.no_account") %></span>
        <%= link_to t("common.signup"), new_registration_path, class: "link link-primary ml-1" %>
      </div>
    </div>
  </div>
</div>
