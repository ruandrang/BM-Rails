<% content_for :title, t('admin.matches.show.page_title') %>

<div class="page-header">
  <div>
    <h1><%= t('admin.matches.show.title') %></h1>
    <p class="muted"><%= @match.club.name %> Â· <%= @match.played_on.strftime("%Y-%m-%d") %></p>
  </div>
  <div class="actions">
    <%= link_to t('admin.common.back_to_list'), admin_matches_path, class: "button ghost" %>
  </div>
</div>

<div class="card">
  <table class="table">
    <tbody>
      <tr><th><%= t('admin.matches.fields.id') %></th><td><%= @match.id %></td></tr>
      <tr><th><%= t('admin.matches.fields.club') %></th><td><%= @match.club.name %></td></tr>
      <tr><th><%= t('admin.matches.fields.date') %></th><td><%= @match.played_on.strftime("%Y-%m-%d") %></td></tr>
      <tr><th><%= t('admin.matches.fields.teams_count') %></th><td><%= @match.teams_count %></td></tr>
      <tr><th><%= t('admin.matches.fields.memo') %></th><td><%= @match.note.presence || "-" %></td></tr>
    </tbody>
  </table>
</div>

<div class="card">
  <h2><%= t('admin.matches.sections.teams') %></h2>
  <ul class="member-list">
    <% @match.teams.each do |team| %>
      <li class="member-item">
        <span class="member-name"><%= t('admin.common.team_label', label: team.label) %> (<%= team.color %>)</span>
        <span class="member-meta"><%= team.members.count %><%= t('admin.common.members_suffix') %></span>
        <%= link_to t('admin.common.view'), admin_team_path(team), class: "button ghost" %>
      </li>
    <% end %>
  </ul>
</div>

<div class="card">
  <h2><%= t('admin.matches.sections.games') %></h2>
  <ul class="member-list">
    <% @match.games.each do |game| %>
      <li class="member-item">
        <span class="member-name"><%= t('admin.common.team_vs', home: game.home_team.label, away: game.away_team.label) %></span>
        <span class="member-meta"><%= game.result %></span>
        <%= link_to t('admin.common.view'), admin_game_path(game), class: "button ghost" %>
      </li>
    <% end %>
  </ul>
</div>
