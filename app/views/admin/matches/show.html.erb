<% content_for :title, "관리자 · 경기 상세" %>

<div class="page-header">
  <div>
    <h1>경기 상세</h1>
    <p class="muted"><%= @match.club.name %> · <%= @match.played_on.strftime("%Y-%m-%d") %></p>
  </div>
  <div class="actions">
    <%= link_to "목록으로", admin_matches_path, class: "button ghost" %>
  </div>
</div>

<div class="card">
  <table class="table">
    <tbody>
      <tr><th>ID</th><td><%= @match.id %></td></tr>
      <tr><th>클럽</th><td><%= @match.club.name %></td></tr>
      <tr><th>날짜</th><td><%= @match.played_on.strftime("%Y-%m-%d") %></td></tr>
      <tr><th>팀 수</th><td><%= @match.teams_count %></td></tr>
      <tr><th>메모</th><td><%= @match.note.presence || "-" %></td></tr>
    </tbody>
  </table>
</div>

<div class="card">
  <h2>팀</h2>
  <ul class="member-list">
    <% @match.teams.each do |team| %>
      <li class="member-item">
        <span class="member-name">팀 <%= team.label %> (<%= team.color %>)</span>
        <span class="member-meta"><%= team.members.count %>명</span>
        <%= link_to "보기", admin_team_path(team), class: "button ghost" %>
      </li>
    <% end %>
  </ul>
</div>

<div class="card">
  <h2>게임</h2>
  <ul class="member-list">
    <% @match.games.each do |game| %>
      <li class="member-item">
        <span class="member-name">팀 <%= game.home_team.label %> vs 팀 <%= game.away_team.label %></span>
        <span class="member-meta"><%= game.result %></span>
        <%= link_to "보기", admin_game_path(game), class: "button ghost" %>
      </li>
    <% end %>
  </ul>
</div>
