<% content_for :title, "관리자 · 경기" %>

<div class="page-header">
  <div>
    <h1>경기 목록</h1>
    <p class="muted">전체 경기 기록</p>
  </div>
  <div class="actions">
    <%= link_to "대시보드", admin_root_path, class: "button ghost" %>
  </div>
</div>

<div class="card">
  <table class="table">
    <thead>
      <tr>
        <th>ID</th>
        <th>클럽</th>
        <th>날짜</th>
        <th>팀 수</th>
        <th>보기</th>
      </tr>
    </thead>
    <tbody>
      <% @matches.each do |match| %>
        <tr>
          <td><%= match.id %></td>
          <td><%= match.club.name %></td>
          <td><%= match.played_on.strftime("%Y-%m-%d") %></td>
          <td><%= match.teams_count %></td>
          <td><%= link_to "보기", admin_match_path(match), class: "button ghost" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
