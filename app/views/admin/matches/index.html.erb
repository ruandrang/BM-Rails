<% content_for :title, t('admin.matches.page_title') %>

<div class="page-header">
  <div>
    <h1><%= t('admin.matches.title') %></h1>
    <p class="muted"><%= t('admin.matches.subtitle') %></p>
  </div>
  <div class="actions">
    <%= link_to t('admin.common.dashboard'), admin_root_path, class: "button ghost" %>
  </div>
</div>

<div class="card">
  <table class="table">
    <thead>
      <tr>
        <th><%= t('admin.matches.fields.id') %></th>
        <th><%= t('admin.matches.fields.club') %></th>
        <th><%= t('admin.matches.fields.date') %></th>
        <th><%= t('admin.matches.fields.teams_count') %></th>
        <th><%= t('admin.common.view') %></th>
      </tr>
    </thead>
    <tbody>
      <% @matches.each do |match| %>
        <tr>
          <td><%= match.id %></td>
          <td><%= match.club.name %></td>
          <td><%= match.played_on.strftime("%Y-%m-%d") %></td>
          <td><%= match.teams_count %></td>
          <td><%= link_to t('admin.common.view'), admin_match_path(match), class: "button ghost" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
