<% content_for :title, t('admin.users.edit.page_title') %>

<div class="max-w-2xl mx-auto">
  <div class="mb-4">
    <%= link_to admin_user_path(@user), class: "btn btn-ghost btn-sm gap-2" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
      <%= t('admin.common.back_to_detail') %>
    <% end %>
  </div>

  <div class="mb-8">
    <h1 class="text-4xl font-bold text-base-content mb-2"><%= t('admin.users.edit.title') %></h1>
    <p class="text-base-content/60"><%= @user.email %></p>
  </div>

  <div class="card-modern-static">
    <div class="card-body">
      <%= form_with model: [:admin, @user], class: "space-y-6" do |f| %>
        <% if @user.errors.any? %>
          <div class="alert alert-error">
            <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
            <ul class="list-disc list-inside">
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-control">
          <%= f.label :name, t('admin.users.fields.name'), class: "label" %>
          <%= f.text_field :name, class: "input input-bordered w-full" %>
        </div>

        <div class="form-control">
          <%= f.label :email, t('admin.users.fields.email'), class: "label" %>
          <%= f.email_field :email, class: "input input-bordered w-full" %>
        </div>

        <% if @user != current_user %>
          <div class="form-control">
            <label class="label cursor-pointer justify-start gap-3">
              <%= f.check_box :admin, class: "checkbox checkbox-primary" %>
              <span class="label-text"><%= t('admin.users.fields.admin') %></span>
            </label>
          </div>
        <% end %>

        <div class="flex gap-3 pt-4">
          <%= f.submit t('admin.common.save'), class: "btn btn-primary" %>
          <%= link_to t('admin.common.cancel'), admin_user_path(@user), class: "btn btn-ghost" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
