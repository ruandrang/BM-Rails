<% content_for :title, t('admin.users.page_title') %>

<div class="max-w-7xl mx-auto">
  <!-- 뒤로가기 -->
  <div class="mb-4">
    <%= link_to admin_root_path, class: "btn btn-ghost btn-sm gap-2" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
      <%= t('admin.common.dashboard') %>
    <% end %>
  </div>

  <!-- 페이지 헤더 -->
  <div class="mb-8">
    <h1 class="text-4xl font-bold text-base-content mb-2"><%= t('admin.users.title') %></h1>
    <p class="text-base-content/60"><%= t('admin.users.subtitle') %></p>
  </div>

  <!-- 검색 -->
  <%= render 'admin/shared/search_form', url: admin_users_path, placeholder: t('admin.users.search_placeholder') %>

  <!-- 테이블 카드 -->
  <div class="card-modern-static">
    <div class="card-body">
      <div class="overflow-x-auto">
        <table class="table">
          <thead>
            <tr>
              <th><%= t('admin.users.fields.id') %></th>
              <th><%= t('admin.users.fields.email') %></th>
              <th><%= t('admin.users.fields.name') %></th>
              <th><%= t('admin.users.fields.admin') %></th>
              <th><%= t('admin.users.fields.clubs_count') %></th>
              <th><%= t('admin.common.view') %></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr class="hover">
                <td><%= user.id %></td>
                <td><%= user.email %></td>
                <td><%= user.name.presence || "-" %></td>
                <td>
                  <span class="badge <%= user.admin? ? 'badge-primary' : 'badge-ghost' %>">
                    <%= user.admin? ? "Admin" : "User" %>
                  </span>
                </td>
                <td><%= user.clubs.count %></td>
                <td>
                  <%= link_to t('admin.common.view'), admin_user_path(user), class: "btn btn-ghost btn-xs" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <%= render 'admin/shared/pagination' %>
    </div>
  </div>
</div>
