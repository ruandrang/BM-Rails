<% content_for :title, "관리자 · 사용자" %>

<div class="page-header">
  <div>
    <h1>사용자 목록</h1>
    <p class="muted">전체 사용자 계정 정보</p>
  </div>
  <div class="actions">
    <%= link_to "대시보드", admin_root_path, class: "button ghost" %>
  </div>
</div>

<div class="card">
  <table class="table">
    <thead>
      <tr>
        <th>ID</th>
        <th>이메일</th>
        <th>이름</th>
        <th>관리자</th>
        <th>클럽 수</th>
        <th>보기</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.email %></td>
          <td><%= user.name.presence || "-" %></td>
          <td><%= user.admin? ? "Y" : "N" %></td>
          <td><%= user.clubs.count %></td>
          <td><%= link_to "보기", admin_user_path(user), class: "button ghost" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
