<% content_for :title, t('admin.users.show.page_title') %>

<div class="page-header">
  <div>
    <h1><%= t('admin.users.show.title') %></h1>
    <p class="muted"><%= @user.email %></p>
  </div>
  <div class="actions">
    <%= link_to t('admin.common.back_to_list'), admin_users_path, class: "button ghost" %>
  </div>
</div>

<div class="card">
  <table class="table">
    <tbody>
      <tr><th><%= t('admin.users.fields.id') %></th><td><%= @user.id %></td></tr>
      <tr><th><%= t('admin.users.fields.name') %></th><td><%= @user.name.presence || "-" %></td></tr>
      <tr><th><%= t('admin.users.fields.email') %></th><td><%= @user.email %></td></tr>
      <tr><th><%= t('admin.users.fields.admin') %></th><td><%= @user.admin? ? "Y" : "N" %></td></tr>
      <tr><th><%= t('admin.users.fields.created_at') %></th><td><%= @user.created_at.strftime("%Y-%m-%d %H:%M") %></td></tr>
    </tbody>
  </table>
</div>

<div class="card">
  <h2><%= t('admin.users.sections.clubs') %></h2>
  <ul class="member-list">
    <% @user.clubs.each do |club| %>
      <li class="member-item">
        <span class="member-name"><%= club.name %></span>
        <%= link_to t('admin.common.view'), admin_club_path(club), class: "button ghost" %>
      </li>
    <% end %>
  </ul>
  <% if @user.clubs.empty? %>
    <div class="empty-state"><p><%= t('admin.users.empty.no_clubs') %></p></div>
  <% end %>
</div>
