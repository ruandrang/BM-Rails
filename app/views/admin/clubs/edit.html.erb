<% content_for :title, t('admin.clubs.edit.page_title') %>

<div class="max-w-2xl mx-auto">
  <div class="mb-4">
    <%= link_to admin_club_path(@club), class: "btn btn-ghost btn-sm gap-2" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
      <%= t('admin.common.back_to_detail') %>
    <% end %>
  </div>

  <div class="mb-8">
    <h1 class="text-4xl font-bold text-base-content mb-2"><%= t('admin.clubs.edit.title') %></h1>
    <p class="text-base-content/60"><%= @club.name %></p>
  </div>

  <div class="card-modern-static">
    <div class="card-body">
      <%= form_with model: [:admin, @club], class: "space-y-6" do |f| %>
        <% if @club.errors.any? %>
          <div class="alert alert-error">
            <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
            <ul class="list-disc list-inside">
              <% @club.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-control">
          <%= f.label :name, t('admin.clubs.fields.name'), class: "label" %>
          <%= f.text_field :name, class: "input input-bordered w-full" %>
        </div>

        <div class="form-control">
          <%= f.label :icon, t('admin.clubs.fields.icon'), class: "label" %>
          <%= f.select :icon, Club::ICONS.map { |i| [club_icon(i), i] }, {}, class: "select select-bordered w-full" %>
        </div>

        <div class="form-control">
          <%= f.label :description, t('admin.clubs.fields.description'), class: "label" %>
          <%= f.text_area :description, class: "textarea textarea-bordered w-full", rows: 3 %>
        </div>

        <div class="flex gap-3 pt-4">
          <%= f.submit t('admin.common.save'), class: "btn btn-primary" %>
          <%= link_to t('admin.common.cancel'), admin_club_path(@club), class: "btn btn-ghost" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
