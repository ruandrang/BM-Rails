<% content_for :title, "관리자 · 클럽" %>

<div class="page-header">
  <div>
    <h1>클럽 목록</h1>
    <p class="muted">전체 클럽 정보</p>
  </div>
  <div class="actions">
    <%= link_to "대시보드", admin_root_path, class: "button ghost" %>
  </div>
</div>

<div class="card">
  <table class="table">
    <thead>
      <tr>
        <th>ID</th>
        <th>클럽명</th>
        <th>소유자</th>
        <th>아이콘</th>
        <th>멤버 수</th>
        <th>경기 수</th>
        <th>보기</th>
      </tr>
    </thead>
    <tbody>
      <% @clubs.each do |club| %>
        <tr>
          <td><%= club.id %></td>
          <td><%= club.name %></td>
          <td><%= club.user.email %></td>
          <td><%= club.icon %></td>
          <td><%= club.members.count %></td>
          <td><%= club.matches.count %></td>
          <td><%= link_to "보기", admin_club_path(club), class: "button ghost" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
