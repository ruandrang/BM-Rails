<% content_for :title, t('admin.clubs.show.page_title') %>

<div class="page-header">
  <div>
    <h1><%= t('admin.clubs.show.title') %></h1>
    <p class="muted"><%= @club.name %> Â· <%= @club.user.email %></p>
  </div>
  <div class="actions">
    <%= link_to t('admin.common.back_to_list'), admin_clubs_path, class: "button ghost" %>
  </div>
</div>

<div class="card">
  <table class="table">
    <tbody>
      <tr><th><%= t('admin.clubs.fields.id') %></th><td><%= @club.id %></td></tr>
      <tr><th><%= t('admin.clubs.fields.name') %></th><td><%= @club.name %></td></tr>
      <tr><th><%= t('admin.clubs.fields.icon') %></th><td><%= club_icon(@club.icon) %></td></tr>
      <tr><th><%= t('admin.clubs.fields.owner') %></th><td><%= @club.user.email %></td></tr>
      <tr><th><%= t('admin.clubs.fields.members_count') %></th><td><%= @club.members.count %></td></tr>
      <tr><th><%= t('admin.clubs.fields.matches_count') %></th><td><%= @club.matches.count %></td></tr>
    </tbody>
  </table>
</div>

<div class="card">
  <h2><%= t('admin.clubs.sections.members') %></h2>
  <ul class="member-list">
    <% @club.members.each do |member| %>
      <li class="member-item">
        <span class="member-name"><%= member.name %></span>
        <span class="member-meta"><%= member.position %></span>
        <%= link_to t('admin.common.view'), admin_member_path(member), class: "button ghost" %>
      </li>
    <% end %>
  </ul>
  <% if @club.members.empty? %>
    <div class="empty-state"><p><%= t('admin.clubs.empty.no_members') %></p></div>
  <% end %>
</div>

<div class="card">
  <h2><%= t('admin.clubs.sections.matches') %></h2>
  <ul class="member-list">
    <% @club.matches.each do |match| %>
      <li class="member-item">
        <span class="member-name"><%= match.played_on.strftime("%Y-%m-%d") %></span>
        <span class="member-meta"><%= match.teams_count %><%= t('admin.common.teams_suffix') %></span>
        <%= link_to t('admin.common.view'), admin_match_path(match), class: "button ghost" %>
      </li>
    <% end %>
  </ul>
  <% if @club.matches.empty? %>
    <div class="empty-state"><p><%= t('admin.clubs.empty.no_matches') %></p></div>
  <% end %>
</div>
