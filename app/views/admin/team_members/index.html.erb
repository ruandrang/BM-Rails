<% content_for :title, t('admin.team_members.page_title') %>

<div class="page-header">
  <div>
    <h1><%= t('admin.team_members.title') %></h1>
    <p class="muted"><%= t('admin.team_members.subtitle') %></p>
  </div>
  <div class="actions">
    <%= link_to t('admin.common.dashboard'), admin_root_path, class: "button ghost" %>
  </div>
</div>

<div class="card">
  <table class="table">
    <thead>
      <tr>
        <th><%= t('admin.team_members.fields.id') %></th>
        <th><%= t('admin.team_members.fields.team') %></th>
        <th><%= t('admin.team_members.fields.club') %></th>
        <th><%= t('admin.team_members.fields.member') %></th>
        <th><%= t('admin.common.view') %></th>
      </tr>
    </thead>
    <tbody>
      <% @team_members.each do |team_member| %>
        <tr>
          <td><%= team_member.id %></td>
          <td><%= t('admin.common.team_label', label: team_member.team.label) %></td>
          <td><%= team_member.team.match.club.name %></td>
          <td><%= team_member.member.name %></td>
          <td><%= link_to t('admin.common.view'), admin_team_member_path(team_member), class: "button ghost" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
