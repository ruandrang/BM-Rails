<% content_for :title, "관리자 · 팀 멤버" %>

<div class="page-header">
  <div>
    <h1>팀 멤버 목록</h1>
    <p class="muted">전체 팀-멤버 매핑</p>
  </div>
  <div class="actions">
    <%= link_to "대시보드", admin_root_path, class: "button ghost" %>
  </div>
</div>

<div class="card">
  <table class="table">
    <thead>
      <tr>
        <th>ID</th>
        <th>팀</th>
        <th>클럽</th>
        <th>멤버</th>
        <th>보기</th>
      </tr>
    </thead>
    <tbody>
      <% @team_members.each do |team_member| %>
        <tr>
          <td><%= team_member.id %></td>
          <td>팀 <%= team_member.team.label %></td>
          <td><%= team_member.team.match.club.name %></td>
          <td><%= team_member.member.name %></td>
          <td><%= link_to "보기", admin_team_member_path(team_member), class: "button ghost" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
