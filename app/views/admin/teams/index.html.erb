<% content_for :title, t('admin.teams.page_title') %>

<div class="page-header">
  <div>
    <h1><%= t('admin.teams.title') %></h1>
    <p class="muted"><%= t('admin.teams.subtitle') %></p>
  </div>
  <div class="actions">
    <%= link_to t('admin.common.dashboard'), admin_root_path, class: "button ghost" %>
  </div>
</div>

<div class="card">
  <table class="table">
    <thead>
      <tr>
        <th><%= t('admin.teams.fields.id') %></th>
        <th><%= t('admin.teams.fields.label') %></th>
        <th><%= t('admin.teams.fields.color') %></th>
        <th><%= t('admin.teams.fields.club') %></th>
        <th><%= t('admin.teams.fields.match_date') %></th>
        <th><%= t('admin.teams.fields.members_count') %></th>
        <th><%= t('admin.common.view') %></th>
      </tr>
    </thead>
    <tbody>
      <% @teams.each do |team| %>
        <tr>
          <td><%= team.id %></td>
          <td><%= team.label %></td>
          <td><%= team.color %></td>
          <td><%= team.match.club.name %></td>
          <td><%= team.match.played_on.strftime("%Y-%m-%d") %></td>
          <td><%= team.members.count %></td>
          <td><%= link_to t('admin.common.view'), admin_team_path(team), class: "button ghost" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
