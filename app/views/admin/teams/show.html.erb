<% content_for :title, t('admin.teams.show.page_title') %>

<div class="page-header">
  <div>
    <h1><%= t('admin.teams.show.title') %></h1>
    <p class="muted"><%= t('admin.common.team_label', label: @team.label) %> Â· <%= @team.match.club.name %></p>
  </div>
  <div class="actions">
    <%= link_to t('admin.common.back_to_list'), admin_teams_path, class: "button ghost" %>
  </div>
</div>

<div class="card">
  <table class="table">
    <tbody>
      <tr><th><%= t('admin.teams.fields.id') %></th><td><%= @team.id %></td></tr>
      <tr><th><%= t('admin.teams.fields.label') %></th><td><%= @team.label %></td></tr>
      <tr><th><%= t('admin.teams.fields.color') %></th><td><%= @team.color %></td></tr>
      <tr><th><%= t('admin.teams.fields.club') %></th><td><%= @team.match.club.name %></td></tr>
      <tr><th><%= t('admin.teams.fields.match_date') %></th><td><%= @team.match.played_on.strftime("%Y-%m-%d") %></td></tr>
      <tr><th><%= t('admin.teams.fields.members_count') %></th><td><%= @team.members.count %></td></tr>
    </tbody>
  </table>
</div>

<div class="card">
  <h2><%= t('admin.teams.sections.members') %></h2>
  <ul class="member-list">
    <% @team.members.each do |member| %>
      <li class="member-item">
        <span class="member-name"><%= member.name %></span>
        <span class="member-meta"><%= member.position %></span>
        <%= link_to t('admin.common.view'), admin_member_path(member), class: "button ghost" %>
      </li>
    <% end %>
  </ul>
  <% if @team.members.empty? %>
    <div class="empty-state"><p><%= t('admin.teams.empty.no_members') %></p></div>
  <% end %>
</div>
