<% content_for :title, t('admin.teams.edit.page_title') %>

<div class="max-w-2xl mx-auto">
  <div class="mb-4">
    <%= link_to admin_team_path(@team), class: "btn btn-ghost btn-sm gap-2" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
      <%= t('admin.common.back_to_detail') %>
    <% end %>
  </div>

  <div class="mb-8">
    <h1 class="text-4xl font-bold text-base-content mb-2"><%= t('admin.teams.edit.title') %></h1>
    <p class="text-base-content/60"><%= t('admin.common.team_label', label: @team.label) %> - <%= @team.match.club.name %></p>
  </div>

  <div class="card bg-base-100 shadow-xl">
    <div class="card-body">
      <%= form_with model: [:admin, @team], class: "space-y-6" do |f| %>
        <% if @team.errors.any? %>
          <div class="alert alert-error">
            <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
            <ul class="list-disc list-inside">
              <% @team.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-control">
          <%= f.label :label, t('admin.teams.fields.label'), class: "label" %>
          <%= f.text_field :label, class: "input input-bordered w-full" %>
        </div>

        <div class="form-control">
          <%= f.label :color, t('admin.teams.fields.color'), class: "label" %>
          <%= f.select :color, Team::COLORS, {}, class: "select select-bordered w-full" %>
        </div>

        <div class="flex gap-3 pt-4">
          <%= f.submit t('admin.common.save'), class: "btn btn-primary" %>
          <%= link_to t('admin.common.cancel'), admin_team_path(@team), class: "btn btn-ghost" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
