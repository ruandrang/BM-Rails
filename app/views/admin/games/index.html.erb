<% content_for :title, t('admin.games.page_title') %>

<div class="page-header">
  <div>
    <h1><%= t('admin.games.title') %></h1>
    <p class="muted"><%= t('admin.games.subtitle') %></p>
  </div>
  <div class="actions">
    <%= link_to t('admin.common.dashboard'), admin_root_path, class: "button ghost" %>
  </div>
</div>

<div class="card">
  <table class="table">
    <thead>
      <tr>
        <th><%= t('admin.games.fields.id') %></th>
        <th><%= t('admin.games.fields.club') %></th>
        <th><%= t('admin.games.fields.match_date') %></th>
        <th><%= t('admin.games.fields.matchup') %></th>
        <th><%= t('admin.games.fields.result') %></th>
        <th><%= t('admin.common.view') %></th>
      </tr>
    </thead>
    <tbody>
      <% @games.each do |game| %>
        <tr>
          <td><%= game.id %></td>
          <td><%= game.match.club.name %></td>
          <td><%= game.match.played_on.strftime("%Y-%m-%d") %></td>
          <td><%= t('admin.common.team_vs', home: game.home_team.label, away: game.away_team.label) %></td>
          <td><%= game.result %></td>
          <td><%= link_to t('admin.common.view'), admin_game_path(game), class: "button ghost" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
