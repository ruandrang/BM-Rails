<% content_for :title, "관리자 · 멤버 상세" %>

<div class="page-header">
  <div>
    <h1>멤버 상세</h1>
    <p class="muted"><%= @member.name %> · <%= @member.club.name %></p>
  </div>
  <div class="actions">
    <%= link_to "목록으로", admin_members_path, class: "button ghost" %>
  </div>
</div>

<div class="card">
  <table class="table">
    <tbody>
      <tr><th>ID</th><td><%= @member.id %></td></tr>
      <tr><th>이름</th><td><%= @member.name %></td></tr>
      <tr><th>클럽</th><td><%= @member.club.name %></td></tr>
      <tr><th>나이</th><td><%= @member.age || "-" %></td></tr>
      <tr><th>키</th><td><%= @member.height_cm || "-" %></td></tr>
      <tr><th>포지션</th><td><%= @member.position %></td></tr>
      <tr><th>등번호</th><td><%= @member.jersey_number || "-" %></td></tr>
      <tr><th>정렬</th><td><%= @member.sort_order %></td></tr>
    </tbody>
  </table>
</div>

<div class="card">
  <h2>참여 팀</h2>
  <ul class="member-list">
    <% @member.teams.each do |team| %>
      <li class="member-item">
        <span class="member-name">팀 <%= team.label %> (<%= team.color %>)</span>
        <span class="member-meta"><%= team.match.played_on.strftime("%Y-%m-%d") %></span>
        <%= link_to "보기", admin_team_path(team), class: "button ghost" %>
      </li>
    <% end %>
  </ul>
  <% if @member.teams.empty? %>
    <div class="empty-state"><p>참여 팀이 없습니다.</p></div>
  <% end %>
</div>
