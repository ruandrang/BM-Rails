<% content_for :title, t('admin.members.show.page_title') %>

<div class="page-header">
  <div>
    <h1><%= t('admin.members.show.title') %></h1>
    <p class="muted"><%= @member.name %> Â· <%= @member.club.name %></p>
  </div>
  <div class="actions">
    <%= link_to t('admin.common.back_to_list'), admin_members_path, class: "button ghost" %>
  </div>
</div>

<div class="card">
  <table class="table">
    <tbody>
      <tr><th><%= t('admin.members.fields.id') %></th><td><%= @member.id %></td></tr>
      <tr><th><%= t('admin.members.fields.name') %></th><td><%= @member.name %></td></tr>
      <tr><th><%= t('admin.members.fields.club') %></th><td><%= @member.club.name %></td></tr>
      <tr><th><%= t('admin.members.fields.age') %></th><td><%= @member.age || "-" %></td></tr>
      <tr><th><%= t('admin.members.fields.height') %></th><td><%= @member.height_cm || "-" %></td></tr>
      <tr><th><%= t('admin.members.fields.position') %></th><td><%= @member.position %></td></tr>
      <tr><th><%= t('admin.members.fields.jersey_number') %></th><td><%= @member.jersey_number || "-" %></td></tr>
      <tr><th><%= t('admin.members.fields.sort_order') %></th><td><%= @member.sort_order %></td></tr>
    </tbody>
  </table>
</div>

<div class="card">
  <h2><%= t('admin.members.sections.teams') %></h2>
  <ul class="member-list">
    <% @member.teams.each do |team| %>
      <li class="member-item">
        <span class="member-name"><%= t('admin.common.team_label', label: team.label) %> (<%= team.color %>)</span>
        <span class="member-meta"><%= team.match.played_on.strftime("%Y-%m-%d") %></span>
        <%= link_to t('admin.common.view'), admin_team_path(team), class: "button ghost" %>
      </li>
    <% end %>
  </ul>
  <% if @member.teams.empty? %>
    <div class="empty-state"><p><%= t('admin.members.empty.no_teams') %></p></div>
  <% end %>
</div>
