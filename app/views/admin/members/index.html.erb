<% content_for :title, t('admin.members.page_title') %>

<div class="page-header">
  <div>
    <h1><%= t('admin.members.title') %></h1>
    <p class="muted"><%= t('admin.members.subtitle') %></p>
  </div>
  <div class="actions">
    <%= link_to t('admin.common.dashboard'), admin_root_path, class: "button ghost" %>
  </div>
</div>

<div class="card">
  <table class="table">
    <thead>
      <tr>
        <th><%= t('admin.members.fields.id') %></th>
        <th><%= t('admin.members.fields.name') %></th>
        <th><%= t('admin.members.fields.club') %></th>
        <th><%= t('admin.members.fields.position') %></th>
        <th><%= t('admin.members.fields.jersey_number') %></th>
        <th><%= t('admin.common.view') %></th>
      </tr>
    </thead>
    <tbody>
      <% @members.each do |member| %>
        <tr>
          <td><%= member.id %></td>
          <td><%= member.name %></td>
          <td><%= member.club.name %></td>
          <td><%= member.position %></td>
          <td><%= member.jersey_number || "-" %></td>
          <td><%= link_to t('admin.common.view'), admin_member_path(member), class: "button ghost" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
