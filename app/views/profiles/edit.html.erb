<% content_for :title, t("auth.profile.page_title", default: "ÌîÑÎ°úÌïÑ ÏÑ§Ï†ï") %>

<div class="min-h-screen flex items-center justify-center p-4">
  <div class="card-modern-static w-full max-w-md p-8">
    <div>
      <div class="text-center mb-6">
        <div class="text-6xl mb-4">üèÄ</div>
