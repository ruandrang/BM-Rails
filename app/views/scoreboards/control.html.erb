<div class="min-h-screen bg-gray-50 text-gray-900 p-4 md:p-8 font-sans selection:bg-[#FF6B35] selection:text-white"
     data-scoreboard-root
     data-scoreboard-role="control"
     data-match-id="<%= @match.id %>"
     data-teams="<%= @match.teams.respond_to?(:includes) ? @match.teams.includes(:members).to_json(include: :members) : @match.teams.to_json %>"
     data-games="<%= @games_for_scoreboard.to_json %>"
     data-teams-count="<%= @match.teams.count %>"
     data-regular-quarters="<%= @match.respond_to?(:regular_quarters) ? @match.regular_quarters : 4 %>"
     data-default-period-seconds="<%= current_user.default_period_seconds %>"
     data-locale="<%= current_locale %>"
     data-voice-lang="<%= current_user.speech_locale %>"
     data-sound-enabled="<%= current_user.scoreboard_sound_enabled %>"
     data-voice-enabled="<%= current_user.voice_announcement_enabled %>"
     data-voice-rate="<%= current_user.voice_announcement_rate %>"
     data-possession-switch-pattern="<%= current_user.possession_switch_pattern %>">

  <div class="max-w-[1400px] mx-auto">
    <!-- Header -->
    <header class="flex justify-between items-center mb-8 border-b border-gray-200 pb-6 relative">
      <div class="flex items-center gap-4">
        <h1 class="text-3xl font-black tracking-tighter italic text-gray-900">
          <span data-ui-key="control_panel_prefix">제어</span> <span class="text-[#FF6B35]" data-ui-key="control_panel_highlight">패널</span>
        </h1>
        <p class="text-gray-500 text-sm mt-1 font-mono" data-ui-key="control_connected">연결됨</p>
      </div>

      <!-- Center Info -->
      <div class="absolute left-1/2 -translate-x-1/2 text-center">
        <h2 class="text-xl font-bold text-gray-900" data-club-title data-club-name="<%= @club&.name.to_s %>"><%= @club&.name || "Standalone Mode" %></h2>
        <p class="text-gray-500 text-sm font-mono"><%= Time.current.strftime("%Y.%m.%d") %></p>
      </div>

      <div class="flex items-center gap-3">
        <% if @match.id.to_s.start_with?("standalone_") %>
          <%= link_to standalone_display_path, target: "_blank", class: "btn btn-sm btn-outline border-gray-300 text-gray-600 hover:bg-gray-100 hover:text-gray-900 hover:border-gray-400", data: { ui_key: "open_display" } do %>
            디스플레이 열기
          <% end %>
        <% else %>
          <%= link_to scoreboard_display_club_match_path(@club, @match), target: "_blank", class: "btn btn-sm btn-outline border-gray-300 text-gray-600 hover:bg-gray-100 hover:text-gray-900 hover:border-gray-400", data: { ui_key: "open_display" } do %>
            디스플레이 열기
          <% end %>
        <% end %>
        <button
          class="btn btn-sm px-3 bg-white border border-gray-300 text-gray-600 hover:bg-gray-50 shadow-sm font-bold"
          data-action="toggle-quarter-score-reset"
          data-ui-key="quarter_reset_off">
          쿼터별 점수 리셋 OFF
        </button>
        <div class="px-3 py-1 rounded border border-[#22C55E]/30 bg-[#22C55E]/10 text-[#22C55E] text-xs font-bold tracking-wider">
          <span data-ui-key="live">라이브</span>
        </div>
      </div>
    </header>

    <!-- Main Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-6 lg:gap-12">
      
      <!-- Timer Section (Left) -->
      <section class="lg:col-span-5 flex flex-col gap-6">
        <div class="bg-white border border-gray-200 rounded-2xl p-6 shadow-sm">
          <div class="flex justify-between items-center mb-4">
             <h2 class="text-gray-500 text-[10px] tracking-[2px] font-bold uppercase" data-ui-key="game_timer">경기 타이머</h2>
             <span class="text-[#E53935] font-black text-3xl" data-scoreboard-quarter>1Q</span>
          </div>
          
          <!-- Timer Display -->
          <div class="flex justify-center items-center gap-4 mb-2">
            <div class="flex items-end gap-1">
               <div class="text-8xl font-black tracking-tighter tabular-nums leading-none text-gray-900 select-none" 
                    id="control-game-clock" 
                    data-scoreboard-timer>
                 10:00
               </div>
            </div>
          </div>

          <!-- Timer Controls -->
          <div class="grid grid-cols-2 gap-3 mb-2">
            <button class="btn btn-sm bg-gray-100 border-none text-gray-600 hover:bg-gray-200 font-bold" data-action="minus-minute">-1 MIN</button>
            <button class="btn btn-sm bg-gray-100 border-none text-gray-600 hover:bg-gray-200 font-bold" data-action="plus-minute">+1 MIN</button>
          </div>
          <div class="grid grid-cols-2 gap-3 mb-4">
            <button class="btn btn-lg bg-[#22C55E] hover:bg-[#15803d] text-white border-none font-black text-2xl h-20 rounded-xl shadow-md transform active:scale-95 transition-all flex items-center justify-center gap-2"
                    data-action="toggle-main"
                    data-start-text="경기 시작"
                    data-stop-text="경기 멈춤">
              <span data-ui-key="main_start">경기 시작</span>
            </button>
            <div class="flex flex-col gap-2">
               <button class="btn btn-outline h-20 px-6 rounded-xl border-2 border-gray-300 text-gray-600 font-bold text-lg hover:bg-gray-100 hover:text-gray-900 hover:border-gray-400"
                  data-action="reset-main">
                <span data-ui-key="reset">리셋</span>
              </button>
            </div>
          </div>
        </div>

        <div class="bg-white border border-gray-200 rounded-2xl p-6 shadow-sm">
           <div class="flex items-center justify-between mb-4">
             <h2 class="text-gray-500 text-[10px] tracking-[2px] font-bold uppercase" data-ui-key="shot_clock_title">샷클락</h2>
           </div>
           
           <div class="flex gap-4">
              <div class="flex-1 bg-gray-900 rounded-xl flex items-center justify-center h-32 relative overflow-hidden shadow-inner">
                <span class="text-7xl font-black text-[#F7B801] tracking-tighter tabular-nums z-10" 
                      id="control-shot-clock"
                      data-scoreboard-shot>24</span>
              </div>
              <div class="flex flex-col gap-2 w-32">
                <button class="btn flex-1 bg-gray-100 hover:bg-gray-200 text-gray-800 border-none font-bold" data-action="reset-shot-24">24s</button>
                <button class="btn flex-1 bg-gray-100 hover:bg-gray-200 text-gray-800 border-none font-bold" data-action="reset-shot-14">14s</button>
                <button class="btn flex-1 btn-outline border-gray-300 text-gray-500 hover:bg-gray-100 hover:text-gray-800" data-action="toggle-shot"><span data-ui-key="main_stop">멈춤</span></button>
              </div>
           </div>
        </div>
      </section>

      <!-- Scores Section (Right) -->
      <section class="lg:col-span-7 grid grid-cols-2 gap-6 relative">
        <div class="absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 w-12 h-12 bg-gray-100 rounded-full flex items-center justify-center font-black text-gray-400 text-xs border border-gray-200 z-10 overflow-hidden">
          <svg width="24" height="24" viewBox="0 0 24 24" class="possession-arrow-left hidden" style="fill: #E53935;">
            <polygon points="24,12 6,0 6,8 0,8 0,16 6,16 6,24" />
          </svg>
          <svg width="24" height="24" viewBox="0 0 24 24" class="possession-arrow-right hidden" style="fill: #3B82F6;">
            <polygon points="0,12 18,0 18,8 24,8 24,16 18,16 18,24" />
          </svg>
          <span class="center-vs-text">VS</span>
        </div>

        <!-- Home Team -->
        <div class="bg-white border border-gray-200 rounded-2xl p-6 flex flex-col gap-4 text-center shadow-sm relative overflow-hidden group">
          <div class="flex items-center justify-center gap-3 border-b border-gray-100 pb-4">
             <span class="inline-flex h-10 w-10 shrink-0 rounded-full border-2 border-gray-300 bg-gray-200 shadow-sm" data-home-icon aria-hidden="true"></span>
             <h3 class="font-black text-2xl uppercase text-gray-900" data-home-name><%= @match.home_team.name %></h3>
          </div>
          
          <div class="flex-1 flex flex-col items-center justify-center py-6">
            <input type="number"
                   min="0"
                   step="1"
                   inputmode="numeric"
                   value="0"
                   id="control-home-score"
                   data-home-score
                   data-home-score-input
                   class="score-input-no-stepper w-full max-w-[300px] bg-transparent text-center text-9xl font-black text-gray-900 tracking-tighter leading-none border-none outline-none [appearance:textfield]" />
          </div>

          <div class="grid grid-cols-3 gap-2">
            <button class="btn h-14 bg-gray-100 hover:bg-gray-200 text-gray-900 border-none text-xl font-bold rounded-lg" data-action="add-home-1">+1</button>
            <button class="btn h-14 bg-gray-100 hover:bg-gray-200 text-gray-900 border-none text-xl font-bold rounded-lg" data-action="add-home-2">+2</button>
            <button class="btn h-14 bg-gray-100 hover:bg-gray-200 text-gray-900 border-none text-xl font-bold rounded-lg" data-action="add-home-3">+3</button>
          </div>
          <div class="grid grid-cols-2 gap-2 mt-2">
            <button class="btn h-10 bg-gray-50 hover:bg-gray-100 text-gray-600 border border-gray-200 text-sm font-bold rounded-lg" data-action="sub-home">-1</button>
            <button class="btn h-10 bg-gray-50 hover:bg-red-50 text-red-500 border border-red-100 text-sm font-bold rounded-lg" data-action="reset-home-score"><span data-ui-key="reset">리셋</span></button>
          </div>
          <div class="flex justify-between items-center mt-2 px-2">
            <div class="flex items-center gap-2">
               <span class="text-sm font-bold text-gray-400 uppercase" data-ui-key="foul">파울</span>
               <div class="join border border-gray-200 rounded-lg overflow-hidden">
                 <button class="join-item btn btn-sm btn-ghost border-r border-gray-200 bg-white" data-action="decrement-home-fouls">-</button>
                 <button class="join-item btn btn-sm btn-active bg-gray-50 cursor-default w-12 text-gray-900 text-lg font-bold border-none" data-home-fouls>0</button>
                 <button class="join-item btn btn-sm btn-ghost border-l border-gray-200 bg-white" data-action="increment-home-fouls">+</button>
               </div>

            </div>
          </div>
        </div>

        <!-- Away Team -->
        <div class="bg-white border border-gray-200 rounded-2xl p-6 flex flex-col gap-4 text-center shadow-sm relative overflow-hidden group">
          <div class="flex items-center justify-center gap-3 border-b border-gray-100 pb-4">
             <span class="inline-flex h-10 w-10 shrink-0 rounded-full border-2 border-gray-300 bg-gray-200 shadow-sm" data-away-icon aria-hidden="true"></span>
             <h3 class="font-black text-2xl uppercase text-gray-900" data-away-name><%= @match.away_team.name %></h3>
          </div>
          
          <div class="flex-1 flex flex-col items-center justify-center py-6">
            <input type="number"
                   min="0"
                   step="1"
                   inputmode="numeric"
                   value="0"
                   id="control-away-score"
                   data-away-score
                   data-away-score-input
                   class="score-input-no-stepper w-full max-w-[300px] bg-transparent text-center text-9xl font-black text-gray-900 tracking-tighter leading-none border-none outline-none [appearance:textfield]" />
          </div>

          <div class="grid grid-cols-3 gap-2">
            <button class="btn h-14 bg-gray-100 hover:bg-gray-200 text-gray-900 border-none text-xl font-bold rounded-lg" data-action="add-away-1">+1</button>
            <button class="btn h-14 bg-gray-100 hover:bg-gray-200 text-gray-900 border-none text-xl font-bold rounded-lg" data-action="add-away-2">+2</button>
            <button class="btn h-14 bg-gray-100 hover:bg-gray-200 text-gray-900 border-none text-xl font-bold rounded-lg" data-action="add-away-3">+3</button>
          </div>
          <div class="grid grid-cols-2 gap-2 mt-2">
            <button class="btn h-10 bg-gray-50 hover:bg-gray-100 text-gray-600 border border-gray-200 text-sm font-bold rounded-lg" data-action="sub-away">-1</button>
            <button class="btn h-10 bg-gray-50 hover:bg-red-50 text-red-500 border border-red-100 text-sm font-bold rounded-lg" data-action="reset-away-score"><span data-ui-key="reset">리셋</span></button>
          </div>
          <div class="flex justify-between items-center mt-2 px-2">
            <div class="flex items-center gap-2">
               <span class="text-sm font-bold text-gray-400 uppercase" data-ui-key="foul">파울</span>
               <div class="join border border-gray-200 rounded-lg overflow-hidden">
                 <button class="join-item btn btn-sm btn-ghost border-r border-gray-200 bg-white" data-action="decrement-away-fouls">-</button>
                 <button class="join-item btn btn-sm btn-active bg-gray-50 cursor-default w-12 text-gray-900 text-lg font-bold border-none" data-away-fouls>0</button>
                 <button class="join-item btn btn-sm btn-ghost border-l border-gray-200 bg-white" data-action="increment-away-fouls">+</button>
               </div>

            </div>
          </div>
        </div>
      </section>
    </div>

    <!-- Footer Actions -->
    <div class="mt-8 border-t border-gray-200 pt-6">
      
      <!-- Quick Actions Bar -->
      <div class="flex items-center flex-nowrap gap-3 overflow-x-auto bg-white border border-gray-200 rounded-2xl p-4 shadow-sm">
        
        <!-- Main Controls -->
        <div class="flex items-center gap-2 shrink-0">
          <button class="btn btn-sm px-5 border-gray-300 bg-white text-gray-700 hover:bg-gray-50 hover:text-gray-900 shadow-sm font-black text-lg h-11 flex items-center gap-2 shrink-0"
                  data-action="buzzer" data-ui-key="buzzer_label">🔔 BUZZER</button>
          <button class="btn btn-sm px-3 bg-white hover:bg-gray-50 shadow-sm font-bold h-11 shrink-0"
                  data-action="toggle-announcements"
                  data-ui-key="announcements_on">🔊 안내 ON</button>
          <button class="btn btn-sm px-4 border-red-100 bg-red-50 text-red-600 hover:bg-red-100 shadow-sm font-bold h-11 shrink-0"
                  data-action="reset-all" data-ui-key="reset_all">🔄 전체 리셋</button>
          <button class="btn btn-sm px-4 border-blue-100 bg-blue-50 text-blue-600 hover:bg-blue-100 shadow-sm font-bold h-11 shrink-0"
                  data-action="swap-sides" data-ui-key="swap_scores">🔄 점수 바꾸기</button>
        </div>

        <% unless @match.id.to_s.start_with?("standalone_") %>
          <div class="w-px h-8 bg-gray-200 shrink-0"></div>
          
          <!-- Match Progress Controls -->
          <div class="flex items-center gap-2 shrink-0">
            <% if @match.teams_count == 2 %>
              <button class="btn btn-sm px-4 border-indigo-200 bg-indigo-50 text-indigo-700 hover:bg-indigo-100 shadow-sm font-bold h-11 shrink-0"
                      data-action="add-game">+ 경기 추가</button>
            <% end %>
            <button class="btn btn-sm px-4 border-red-100 bg-red-50 text-red-600 hover:bg-red-100 shadow-sm font-bold h-11 shrink-0"
                    data-action="new-game" data-ui-key="match_reset">경기 리셋</button>
            <button class="btn btn-sm px-4 border-green-200 bg-green-50 text-green-700 hover:bg-green-100 shadow-sm font-bold h-11 shrink-0"
                    data-action="finish-game"
                    data-ui-key="finish_match">🏁 경기 종료</button>
          </div>
        <% end %>

        <div class="w-px h-8 bg-gray-200 shrink-0"></div>

        <!-- Attack Direction (Possession) -->
        <div class="flex items-center gap-2 shrink-0">
          <button class="btn btn-sm px-4 border-gray-200 bg-white text-gray-700 hover:bg-gray-50 shadow-sm h-10 min-h-0 font-bold whitespace-nowrap"
                  data-action="toggle-possession"
                  data-possession-toggle-btn>
            공격 전환
          </button>
        </div>

        <% unless @match.id.to_s.start_with?("standalone_") %>
          <button class="btn px-8 h-14 min-h-0 ml-auto bg-blue-600 border-blue-600 text-white hover:bg-blue-700 shadow-md font-extrabold text-base tracking-wide shrink-0"
                  data-action="next-quarter"
                  data-ui-key="next_quarter">다음 쿼터</button>
        <% end %>

      </div>
    </div>

    <!-- Footer Area: Score Table, Roster & Shortcuts -->
    <div class="mt-12 w-full pb-16 flex flex-col items-center">
        <!-- Toggle Button -->
        <div class="mb-4">
                <button data-action="toggle-shortcuts" data-ui-key="shortcuts_hide" class="btn btn-xs bg-white border border-gray-300 shadow-sm text-gray-500 rounded-full px-4 hover:bg-gray-50 transition-all">
                  ⌨️ 상세 숨기기
                </button>
        </div>

        <!-- Collapsible Panel: Draggable Cards -->
        <div data-shortcuts-panel data-detail-sort-container class="w-full flex flex-col gap-8 animate-in slide-in-from-bottom-4 fade-in duration-200">

            <% unless @match.id.to_s.start_with?("standalone_") %>
              <!-- Quarterly Score Table -->
              <div data-detail-sort-item data-detail-sort-key="matchup" class="w-full bg-white border border-gray-200 rounded-2xl shadow-sm">
                <div class="flex items-center justify-between px-6 pt-5 pb-2 border-b border-gray-100">
                  <p class="text-xs font-bold tracking-widest uppercase text-gray-400" data-ui-key="quarter_table_matchup">경기 Matchup</p>
                  <div class="flex items-center gap-2">
                    <div class="join border border-gray-200 rounded-lg overflow-hidden">
                      <button
                        type="button"
                        class="join-item btn btn-xs bg-gray-900 text-white border-0 h-7 min-h-0 px-3"
                        data-action="set-quarter-view-cumulative"
                        data-ui-key="view_cumulative">
                        누적
                      </button>
                      <button
                        type="button"
                        class="join-item btn btn-xs bg-white text-gray-500 border-0 h-7 min-h-0 px-3"
                        data-action="set-quarter-view-per-quarter"
                        data-ui-key="view_per_quarter">
                        쿼터별
                      </button>
                    </div>
                    <button type="button" data-detail-drag-handle class="btn btn-xs btn-ghost text-gray-400 hover:text-gray-700 min-h-0 h-7 px-2 cursor-move" aria-label="경기 순서 변경" data-ui-aria-key="drag_matchup_aria" data-ui-key="drag">
                      ↕ 드래그
                    </button>
                  </div>
                </div>
                <div data-quarter-table class="w-full p-8">
                   <!-- Table injected by JS -->
                </div>
              </div>
            <% end %>
            
            <!-- Shortcuts -->
            <div data-detail-sort-item data-detail-sort-key="shortcuts" class="w-full bg-white border border-gray-200 rounded-2xl shadow-sm">
              <div class="flex items-center justify-between px-6 pt-5 pb-2 border-b border-gray-100">
                <p class="text-xs font-bold tracking-widest uppercase text-gray-400" data-ui-key="shortcuts_title">키보드 단축키</p>
                <button type="button" data-detail-drag-handle class="btn btn-xs btn-ghost text-gray-400 hover:text-gray-700 min-h-0 h-7 px-2 cursor-move" aria-label="단축키 순서 변경" data-ui-aria-key="drag_shortcuts_aria" data-ui-key="drag">
                  ↕ 드래그
                </button>
              </div>
              <div class="px-12 py-6">
                <div class="flex gap-16 text-gray-700 text-base font-bold font-sans">
                <!-- Column 1: Timers -->
                <div class="flex flex-col gap-4">
                  <div class="flex items-center gap-4">
                    <kbd class="bg-gray-100 text-gray-900 px-3 py-1 rounded-lg font-black min-w-[60px] text-center shadow-sm border border-gray-300 border-b-4 text-lg">Space</kbd>
                    <span class="text-base" data-ui-key="shortcut_game_clock_toggle">경기 시간 시작 / 멈춤</span>
                  </div>
                  <div class="flex items-center gap-4">
                    <div class="flex gap-2">
                      <kbd class="bg-gray-100 text-gray-900 px-3 py-1 rounded-lg font-black min-w-[36px] text-center shadow-sm border border-gray-300 border-b-4 text-lg">Z</kbd>
                      <kbd class="bg-gray-100 text-gray-900 px-3 py-1 rounded-lg font-black min-w-[36px] text-center shadow-sm border border-gray-300 border-b-4 text-lg">X</kbd>
                    </div>
                    <span class="text-base" data-ui-key="shortcut_shot_reset">샷클락 리셋 (14초 / 24초)</span>
                  </div>
                  <div class="flex items-center gap-4">
                    <kbd class="bg-gray-100 text-gray-900 px-3 py-1 rounded-lg font-black min-w-[36px] text-center shadow-sm border border-gray-300 border-b-4 text-lg">C</kbd>
                    <span class="text-base" data-ui-key="shortcut_shot_toggle">샷클락 멈춤 / 시작</span>
                  </div>
                  <div class="flex items-center gap-4">
                    <div class="flex gap-2">
                      <kbd class="bg-gray-100 text-gray-900 px-3 py-1 rounded-lg font-black min-w-[36px] text-center shadow-sm border border-gray-300 border-b-4 text-lg">B</kbd>
                      <kbd class="bg-gray-100 text-gray-900 px-3 py-1 rounded-lg font-black min-w-[36px] text-center shadow-sm border border-gray-300 border-b-4 text-lg">V</kbd>
                    </div>
                    <span class="text-base" data-ui-key="shortcut_announcements_toggle">B: 안내 ON / V: 안내 OFF</span>
                  </div>
                  <div class="flex items-center gap-4">
                    <kbd class="bg-gray-100 text-gray-900 px-3 py-1 rounded-lg font-black min-w-[36px] text-center shadow-sm border border-gray-300 border-b-4 text-lg">D</kbd>
                    <span class="text-base" data-ui-key="shortcut_buzzer">부저 울리기</span>
                  </div>
                </div>

                <div class="w-px bg-gray-300"></div>

                <!-- Column 2: Scores -->
                <div class="flex flex-col gap-4">
                  <div class="flex items-center gap-4">
                    <div class="flex gap-2">
                      <kbd class="bg-gray-100 text-gray-900 w-9 py-1 rounded-lg font-black text-center shadow-sm border border-gray-300 border-b-4 text-lg">1</kbd>
                      <kbd class="bg-gray-100 text-gray-900 w-9 py-1 rounded-lg font-black text-center shadow-sm border border-gray-300 border-b-4 text-lg">2</kbd>
                      <kbd class="bg-gray-100 text-gray-900 w-9 py-1 rounded-lg font-black text-center shadow-sm border border-gray-300 border-b-4 text-lg">3</kbd>
                    </div>
                    <span class="text-base" data-ui-key="shortcut_left_score_add">왼쪽 팀 득점 (+1, +2, +3)</span>
                  </div>
                  <div class="flex items-center gap-4">
                    <div class="flex gap-2">
                      <kbd class="bg-gray-100 text-gray-900 w-9 py-1 rounded-lg font-black text-center shadow-sm border border-gray-300 border-b-4 text-lg">8</kbd>
                      <kbd class="bg-gray-100 text-gray-900 w-9 py-1 rounded-lg font-black text-center shadow-sm border border-gray-300 border-b-4 text-lg">9</kbd>
