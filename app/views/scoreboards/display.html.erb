<div class="relative w-full h-screen flex flex-col bg-[#0A0A0A] overflow-hidden select-none"
     data-scoreboard-root 
     data-scoreboard-role="display"
     data-match-id="<%= @match.id %>"
     data-teams="<%= @match.teams.to_json %>"
     data-teams-count="<%= @match.teams.count %>">
  <!-- Header -->
  <header class="h-[72px] flex flex-col justify-center items-center bg-[#111111] border-b-[3px] border-[#E53935] z-10 shrink-0">
    <div class="flex items-center gap-4">
      <span class="text-[#E53935] font-['Inter'] font-bold text-[13px] tracking-[3px]">BM LEAGUE</span>
    </div>
    <div class="text-[#666666] font-['JetBrains_Mono'] text-[11px] tracking-[1px] mt-1 uppercase">
      <%= @match.date.strftime("%Y.%m.%d") %> â€” GAME <%= @match.id %>
    </div>
  </header>

  <!-- Score Body -->
  <main class="flex-1 flex justify-center items-center w-full px-12 gap-12">
    <!-- Home Team -->
    <div class="flex-1 flex flex-col items-center justify-center p-8 border border-[#222222] bg-[#141414]/50 rounded-lg backdrop-blur-sm h-[400px]">
      <div class="text-6xl mb-6 scale-150"><%= @match.home_team.icon %></div>
      <h2 class="text-white font-['Inter'] text-2xl font-bold tracking-wider mb-2"><%= @match.home_team.name %></h2>
      <div class="text-[#666666] text-sm uppercase tracking-widest mb-10">HOME</div>
      <div class="font-['JetBrains_Mono'] text-[140px] leading-none font-bold text-white tabular-nums tracking-tighter" 
           id="home-score-display"
           data-home-score>
        0
      </div>
    </div>

    <!-- Center Panel (Timer) -->
    <div class="w-[300px] flex flex-col items-center justify-center gap-8 h-[400px]">
      <!-- Quarter Badge -->
      <div class="px-5 py-2 bg-[#E53935] text-white font-['JetBrains_Mono'] font-bold text-xl rounded">
        <span data-scoreboard-quarter>1Q</span>
      </div>

      <!-- Main Timer -->
      <div class="font-['JetBrains_Mono'] text-[100px] leading-none font-bold text-white tabular-nums tracking-tighter text-shadow-glow" 
           id="game-clock-display"
           data-scoreboard-timer>
        10:00
      </div>

      <!-- Shot Clock -->
      <div class="mt-4 px-8 py-3 bg-[#1A1A1A] border border-[#333333] rounded-lg">
        <span class="font-['JetBrains_Mono'] text-[#E53935] text-5xl font-bold tabular-nums" 
              id="shot-clock-display"
              data-scoreboard-shot>24</span>
      </div>
    </div>

    <!-- Away Team -->
    <div class="flex-1 flex flex-col items-center justify-center p-8 border border-[#222222] bg-[#141414]/50 rounded-lg backdrop-blur-sm h-[400px]">
      <div class="text-6xl mb-6 scale-150"><%= @match.away_team.icon %></div>
      <h2 class="text-white font-['Inter'] text-2xl font-bold tracking-wider mb-2"><%= @match.away_team.name %></h2>
      <div class="text-[#666666] text-sm uppercase tracking-widest mb-10">AWAY</div>
      <div class="font-['JetBrains_Mono'] text-[140px] leading-none font-bold text-white tabular-nums tracking-tighter" 
           id="away-score-display"
           data-away-score>
        0
      </div>
    </div>
  </main>

  <!-- Stats Bar -->
  <div class="h-[90px] w-full bg-[#111111] border-t-[3px] border-[#E53935] flex items-center justify-between px-16 shrink-0">
    <!-- Home Stats -->
    <div class="flex items-center gap-12 text-[#888888] font-['JetBrains_Mono']">
      <div class="flex flex-col items-center">
        <span class="text-xs uppercase tracking-widest mb-1">FOULS</span>
        <span class="text-3xl text-white font-bold" data-home-fouls-display>0</span>
      </div>
    </div>

    <!-- Center Stats Info -->
    <div class="flex flex-col items-center justify-center">
      <span class="text-[#444444] text-xs tracking-[2px] mb-2 font-bold">POSSESSION</span>
      <div class="flex items-center gap-3">
        <div class="w-0 h-0 border-t-[8px] border-t-transparent border-b-[8px] border-b-transparent border-r-[12px] border-r-[#333333]" id="home-poss-indicator"></div>
        <div class="w-0 h-0 border-t-[8px] border-t-transparent border-b-[8px] border-b-transparent border-l-[12px] border-l-[#E53935]" id="away-poss-indicator"></div>
      </div>
    </div>

    <!-- Away Stats -->
    <div class="flex items-center gap-12 text-[#888888] font-['JetBrains_Mono']">
      <div class="flex flex-col items-center">
        <span class="text-xs uppercase tracking-widest mb-1">FOULS</span>
        <span class="text-3xl text-white font-bold" data-away-fouls-display>0</span>
      </div>
    </div>
  </div>

  <!-- Quarter Scores (Bottom) -->
  <div class="h-[78px] bg-[#0D0D0D] border-t border-[#222222] flex w-full shrink-0">
    <div class="w-[120px] flex items-center justify-center border-r border-[#222222] bg-[#141414] text-[#666666] font-bold text-lg font-['Inter']">
      SCORES
    </div>
    <div class="flex-1 flex items-center justify-center gap-20 font-['JetBrains_Mono'] text-[#888888]">
      <div class="flex flex-col items-center gap-1">
        <span class="text-xs">1Q</span>
        <span class="text-white font-bold text-lg">24 - 22</span>
      </div>
    </div>
    <div class="w-[120px] flex items-center justify-center border-l border-[#222222] bg-[#141414]">
      <!-- Fullscreen Toggle Button -->
      <button id="fullscreen-toggle" class="text-[#666666] hover:text-white transition-colors p-3 rounded-full hover:bg-[#333333]">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M8 3H5a2 2 0 0 0-2 2v3m18 0V5a2 2 0 0 0-2-2h-3m0 18h3a2 2 0 0 0 2-2v-3M3 16v3a2 2 0 0 0 2 2h3"/>
        </svg>
      </button>
    </div>
  </div>
</div>

<style>
  .text-shadow-glow {
    text-shadow: 0 0 30px rgba(255, 255, 255, 0.15);
  }
</style>
