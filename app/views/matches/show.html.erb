<% content_for :title, t('matches.show.page_title', date: l(@match.played_on, format: :short), club_name: @club.name) %>
<% undersized_teams = @teams.select { |team| team.members.size < 5 } %>
<% regular_quarters = @match.regular_quarters_count %>

<div class="max-w-7xl mx-auto">
  <!-- 뒤로가기 -->
  <div class="mb-4">
    <%= link_to club_matches_path(@club), class: "btn btn-ghost btn-sm gap-2" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
      <%= t('common.back') %>
    <% end %>
  </div>

  <!-- 경기 헤더 -->
  <div class="card bg-gradient-to-r from-primary to-secondary text-primary-content mb-8">
    <div class="card-body">
      <div class="flex flex-col md:flex-row items-center justify-between gap-4">
        <div class="text-center md:text-left">
          <div class="flex items-center justify-center md:justify-start gap-2 mb-2">
            <div class="badge badge-outline"><%= t('matches.show.teams_match', count: @match.teams_count) %></div>
            <div class="badge badge-outline"><%= t('matches.index.quarters_count', count: regular_quarters) %></div>
            <% if @match.finished? %>
              <div class="badge badge-success gap-1">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <%= t('matches.show.status_finished') %>
              </div>
            <% elsif @match.paused? %>
              <div class="badge badge-warning gap-1">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 9v6m4-6v6m7-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <%= t('matches.show.status_paused') %>
              </div>
            <% else %>
              <div class="badge badge-info gap-1">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <%= t('matches.show.status_in_progress') %>
              </div>
            <% end %>
          </div>
          <h1 class="text-4xl font-bold mb-2"><%= l(@match.played_on, format: :long) %></h1>
          <p class="text-primary-content/80"><%= @club.name %></p>
          <% if @match.note.present? %>
            <p class="text-primary-content/60 mt-2"><%= @match.note %></p>
          <% end %>
        </div>
        <div class="flex gap-2">
          <% if @match.finished? %>
            <button type="button" class="btn btn-primary btn-sm gap-2 btn-disabled" disabled>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <%= t('matches.show.finished') %>
            </button>
          <% elsif @match.paused? %>
            <%= link_to scoreboard_club_match_path(@club, @match), class: "btn btn-warning btn-sm gap-2" do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <%= t('matches.show.resume_scoreboard') %>
            <% end %>
            <%= button_to reset_all_scores_club_match_path(@club, @match),
                method: :patch,
                class: "btn btn-error btn-sm gap-2",
                data: { confirm: t('matches.show.reset_all_scores_confirm', default: '정말로 모든 점수를 초기화하시겠습니까? 이 작업은 되돌릴 수 없습니다.') } do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
              </svg>
              <%= t('matches.show.reset_all_scores', default: '모든 점수 리셋') %>
            <% end %>
          <% elsif undersized_teams.any? %>
            <button type="button" class="btn btn-primary btn-sm gap-2" onclick="document.getElementById('scoreboard_team_size_warning_modal').showModal()">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3" />
              </svg>
              <%= t('matches.show.scoreboard') %>
            </button>
          <% else %>
            <%= link_to scoreboard_club_match_path(@club, @match), class: "btn btn-primary btn-sm gap-2" do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3" />
              </svg>
              <%= t('matches.show.scoreboard') %>
            <% end %>
          <% end %>
          <%= link_to edit_club_match_path(@club, @match), class: "btn btn-ghost btn-sm" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
            </svg>
            <%= t('matches.show.edit') %>
          <% end %>
          <button type="button" class="btn btn-ghost btn-sm" id="share-download-btn" onclick="captureAndDownload()">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
            </svg>
            <%= t('matches.show.share') %>
          </button>
        </div>
      </div>
    </div>
  </div>

  <% if !@match.finished? && undersized_teams.any? %>
    <dialog id="scoreboard_team_size_warning_modal" class="modal modal-bottom sm:modal-middle text-base-content">
      <div class="modal-box">
        <h3 class="font-bold text-lg mb-3"><%= t('matches.show.team_warning') %></h3>
        <p class="text-sm text-base-content/70 mb-3"><%= t('matches.show.team_warning_desc') %></p>
        <div class="rounded-lg bg-base-200 border border-base-300 p-3 mb-4">
          <ul class="space-y-1 text-sm">
            <% undersized_teams.each do |team| %>
              <li class="flex items-center justify-between">
                <span class="font-semibold">TEAM <%= team.label %></span>
                <span class="badge badge-warning"><%= t('matches.show.members_count', count: team.members.size) %></span>
              </li>
            <% end %>
          </ul>
        </div>
        <div class="modal-action">
          <button type="button" class="btn" onclick="document.getElementById('scoreboard_team_size_warning_modal').close()"><%= t('matches.show.cancel') %></button>
          <%= link_to t('matches.show.continue'), scoreboard_club_match_path(@club, @match), class: "btn btn-warning" %>
        </div>
      </div>
      <form method="dialog" class="modal-backdrop">
        <button>close</button>
      </form>
    </dialog>
  <% end %>

  <!-- 팀 카드들 -->
  <% team_records = {} %>

  <!-- 팀 랜덤 재배치 버튼 (게임 기록 없을 때만) -->
  <% if @match.games.none? { |g| g.result != 'pending' || g.home_score > 0 || g.away_score > 0 } %>
    <div class="flex justify-end mb-4" data-share-hide>
      <%= button_to shuffle_teams_club_match_path(@club, @match),
          method: :patch,
          class: "btn btn-warning gap-2 btn-sm",
          data: { confirm: t('matches.show.shuffle_confirm') } do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
        </svg>
        <%= t('matches.show.shuffle_teams') %>
      <% end %>
    </div>
  <% end %>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-<%= @match.teams_count %> gap-6 mb-8"
       data-controller="match-drag"
       data-match-drag-match-id-value="<%= @match.id %>"
       data-club-id="<%= @club.id %>"
       data-move-member-url="<%= move_member_club_match_path(@club, @match) %>"
       data-remove-member-url="<%= remove_member_club_match_path(@club, @match) %>">
    <% @teams.each do |team| %>
      <% record = team_record(team, @games) %>
      <% wins, draws, losses = record[:wins], record[:draws], record[:losses] %>
      <% team_records[team.id] = record %>
      <% team_size = team.members.size %>
      <% can_add_member = @available_members_for_match.any? %>

      <div class="card-modern-static overflow-hidden border-t-8" style="border-top-color: <%= team.css_color %>">
        <div class="card-body">
          <!-- 팀 헤더 -->
          <div class="flex items-center justify-between mb-6">
            <h2 class="text-3xl font-black italic">
              TEAM <%= team.label %>
            </h2>
            <div class="flex items-center gap-2">
              <div class="badge badge-ghost badge-sm"><%= t('matches.show.members_count', count: team_size) %></div>
              <div class="badge badge-lg gap-2 font-bold ring-1 ring-black/5" style="background-color: <%= team.css_color %>; border-color: <%= team.css_color %>; color: <%= team.css_text_color %>;">
                <%= team.color %>
              </div>
            </div>
          </div>

          <!-- 전적 전용 대시보드 -->
          <div class="flex items-center justify-around bg-base-200 rounded-box p-4 mb-6 ring-1 ring-base-300">
            <div class="text-center">
              <div class="text-[10px] uppercase tracking-widest opacity-50 font-black">Wins</div>
              <div class="text-3xl font-black text-success"><%= wins %></div>
            </div>
            <div class="divider divider-horizontal mx-0"></div>
            <div class="text-center">
              <div class="text-[10px] uppercase tracking-widest opacity-50 font-black">Draws</div>
              <div class="text-3xl font-black"><%= draws %></div>
            </div>
            <div class="divider divider-horizontal mx-0"></div>
            <div class="text-center">
              <div class="text-[10px] uppercase tracking-widest opacity-50 font-black">Losses</div>
              <div class="text-3xl font-black text-error"><%= losses %></div>
            </div>
          </div>

          <!-- 멤버 목록 (Sortable Target) -->
          <div class="grid grid-cols-2 gap-2 min-h-[50px] p-2 bg-base-100 rounded-lg" data-team-id="<%= team.id %>">
            <% team.members.each do |member| %>
              <div class="flex items-center justify-between p-2 bg-base-200/50 rounded-lg border border-base-300/30 cursor-move hover:bg-base-200 transition-colors" data-id="<%= member.id %>">
                <div class="text-sm font-bold truncate"><%= member.name %></div>
                <span class="badge badge-xs text-white flex-shrink-0" style="<%= position_badge_style(member.position) %>">
                  <%= member.position %>
                </span>
              </div>
            <% end %>
          </div>

          <div class="mt-3 flex items-center justify-between" data-share-hide>
            <p class="text-xs text-base-content/50"><%= t('matches.show.member_drag_hint') %></p>
            <% if can_add_member %>
              <button type="button" class="btn btn-xs btn-outline" onclick="document.getElementById('add_member_modal_<%= team.id %>').showModal()">
                <%= t('matches.show.add_member') %>
              </button>
            <% else %>
              <span class="badge badge-ghost badge-sm"><%= t('matches.show.no_available_members') %></span>
            <% end %>
          </div>
        </div>
      </div>

      <dialog id="add_member_modal_<%= team.id %>" class="modal modal-bottom sm:modal-middle text-base-content">
        <div class="modal-box">
          <h3 class="font-bold text-lg mb-2"><%= t('matches.show.add_member_to_team', label: team.label) %></h3>
          <p class="text-sm text-base-content/60 mb-4"><%= t('matches.show.current_count', count: team_size) %></p>

          <% if @available_members_for_match.any? %>
            <div class="space-y-2 max-h-[360px] overflow-y-auto pr-1">
              <% @available_members_for_match.each do |member| %>
                <%= button_to add_member_club_match_path(@club, @match),
                    method: :patch,
                    params: { target_team_id: team.id, member_id: member.id },
                    class: "w-full text-left flex items-center justify-between p-3 rounded-lg border border-base-300 hover:bg-base-200 transition-colors" do %>
                  <span class="font-semibold"><%= member.name %></span>
                  <span class="badge badge-xs text-white" style="<%= position_badge_style(member.position) %>"><%= member.position %></span>
                <% end %>
              <% end %>
            </div>
          <% else %>
            <div class="alert">
              <span><%= t('matches.show.no_members_to_add') %></span>
            </div>
          <% end %>

          <div class="modal-action">
            <button type="button" class="btn" onclick="document.getElementById('add_member_modal_<%= team.id %>').close()"><%= t('matches.new.close') %></button>
          </div>
        </div>
        <form method="dialog" class="modal-backdrop">
          <button>close</button>
        </form>
      </dialog>
    <% end %>
  </div>

  <style>
    [data-member-trash-zone] > .sortable-ghost {
      max-height: 0 !important;
      overflow: hidden !important;
      padding: 0 !important;
      margin: 0 !important;
      border: none !important;
      opacity: 0 !important;
    }
  </style>
  <% unless @match.finished? %>
    <div data-member-trash-zone data-share-hide class="w-fit mx-auto -mt-4 mb-8">
      <div class="flex items-center gap-2 px-5 py-3 rounded-full border-2 border-dashed border-base-content/20 text-base-content/40 transition-all duration-200">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
        </svg>
        <span class="font-bold text-sm tracking-wide"><%= t('matches.show.trash_hint') %></span>
      </div>
    </div>
  <% end %>

  <!-- 경기 결과 (스코어보드 섹션) -->
  <div class="card bg-neutral text-neutral-content shadow-2xl mb-8">
    <div class="card-body">
      <div class="flex items-center gap-3 mb-8 border-b border-neutral-content/10 pb-4">
        <div class="bg-primary p-2 rounded-lg">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
          </svg>
        </div>
        <h2 class="text-2xl font-black italic tracking-tighter">GAME SCOREBOARD</h2>
      </div>

        <div class="grid grid-cols-1 gap-6">
          <% @games.each_with_index do |game, index| %>
            <div class="group bg-black/40 rounded-xl p-5 ring-1 ring-white/10 hover:ring-primary/50 transition-all duration-300">
              <!-- Game Header -->
              <div class="flex items-center justify-between mb-4 border-b border-white/5 pb-2">
                <div class="bg-primary/20 text-primary text-[10px] font-black px-2 py-1 rounded tracking-widest">
                  GAME <%= index + 1 %>
                </div>
                  <div class="flex items-center gap-2">
                    <div class="text-[10px] font-bold text-white/20 uppercase tracking-widest">
                      Match Result
                    </div>
                    <% quarter_has_points = (game.quarter_scores || {}).values.any? do |score|
                         score.is_a?(Hash) && (score["home"].to_i > 0 || score["away"].to_i > 0)
                       end %>
                    <% game_deletable = @match.teams_count == 2 &&
                                       @games.size > 1 &&
                                       game.result == "pending" &&
                                       game.home_score.to_i.zero? &&
                                       game.away_score.to_i.zero? &&
                                       !quarter_has_points %>
                    <% if game_deletable %>
                      <%= button_to t('matches.show.delete_game'),
                          remove_game_club_match_path(@club, @match),
                          method: :patch,
                          params: { game_id: game.id },
                          class: "btn btn-xs btn-outline btn-error",
                          data: { confirm: t('matches.show.delete_game_confirm'), share_hide: "" } %>
                    <% end %>
                  </div>
                </div>

              <div class="flex flex-col gap-6 pt-2">
                <!-- 상단: 점수판 메인 (3열 그리드) -->
                <div class="grid grid-cols-[1fr_auto_1fr] items-center gap-4 px-2">
                  <!-- 홈팀 정보 (왼쪽 정렬) -->
                  <div class="flex items-center gap-2 md:gap-3 justify-self-start">
                    <div class="w-2 h-10 md:h-12 rounded-sm" style="background-color: <%= game.home_team.css_color %>"></div>
                    <span class="text-2xl md:text-4xl font-black italic text-neutral-content"><%= game.home_team.label %></span>
                  </div>

                  <!-- 점수 및 결과 (중앙) -->
                  <div class="flex items-center gap-4 md:gap-8">
                    <div class="text-[4rem] md:text-[6rem] font-black font-mono leading-none tracking-tighter text-neutral-content <%= 'text-yellow-400 drop-shadow-[0_0_30px_rgba(250,204,21,0.4)]' if game.home_score > game.away_score %>">
                      <%= game.home_score %>
                    </div>

                    <div class="flex flex-col items-center justify-center">
                      <% if game.home_score > game.away_score %>
                        <div class="flex items-center gap-2 md:gap-3">
                          <span class="text-sm md:text-lg font-black text-success tracking-widest uppercase">WIN</span>
                          <div class="w-px h-5 bg-white/30"></div>
                          <span class="text-sm md:text-lg font-bold text-white/30 tracking-widest uppercase">LOSE</span>
                        </div>
                      <% elsif game.away_score > game.home_score %>
                        <div class="flex items-center gap-2 md:gap-3">
                          <span class="text-sm md:text-lg font-bold text-white/30 tracking-widest uppercase">LOSE</span>
                          <div class="w-px h-5 bg-white/30"></div>
                          <span class="text-sm md:text-lg font-black text-success tracking-widest uppercase">WIN</span>
                        </div>
                      <% elsif game.home_score == game.away_score && game.result != "pending" %>
                        <div class="flex items-center gap-2 md:gap-3">
                          <span class="text-sm md:text-lg font-bold text-warning tracking-widest uppercase">DRAW</span>
                          <div class="w-px h-5 bg-white/30"></div>
                          <span class="text-sm md:text-lg font-bold text-warning tracking-widest uppercase">DRAW</span>
                        </div>
                      <% else %>
                        <span class="text-xl md:text-2xl font-black italic text-white/30">VS</span>
                      <% end %>
                    </div>

                    <div class="text-[4rem] md:text-[6rem] font-black font-mono leading-none tracking-tighter text-neutral-content <%= 'text-yellow-400 drop-shadow-[0_0_30px_rgba(250,204,21,0.4)]' if game.away_score > game.home_score %>">
                      <%= game.away_score %>
                    </div>
                  </div>

                  <!-- 어웨이팀 정보 (오른쪽 정렬) -->
                  <div class="flex items-center gap-2 md:gap-3 w-full justify-end">
                    <span class="text-2xl md:text-4xl font-black italic text-neutral-content"><%= game.away_team.label %></span>
                    <div class="w-2 h-10 md:h-12 rounded-sm" style="background-color: <%= game.away_team.css_color %>"></div>
                  </div>
                </div>

                <!-- 하단: 박스스코어 (Classic Grid) -->
                <% game_max_quarter = (game.quarter_scores || {}).keys.map(&:to_i).max || 0 %>
                <div class="bg-black/20 rounded-lg p-3 md:p-4 border border-white/5">
                  <div class="grid gap-y-2 text-center items-center" style="grid-template-columns: 100px repeat(<%= regular_quarters %>, minmax(0, 1fr)) minmax(0, 1fr);">
                    <!-- Header -->
                    <div class="text-left text-xs font-bold text-white/20 pl-2">TEAM</div>
                    <% (1..regular_quarters).each do |q| %>
                      <div class="text-xs font-bold text-white/20"><%= q %>Q</div>
                    <% end %>
                    <div class="text-xs font-bold text-white/40">TOT</div>

                    <!-- Home Row -->
                    <div class="text-left font-bold text-neutral-content truncate pl-2 flex items-center gap-2">
                      <div class="w-1 h-3 rounded-full" style="background-color: <%= game.home_team.css_color %>"></div>
                      <%= game.home_team.label %>
                    </div>
                    <% (1..regular_quarters).each do |q| %>
                      <%
                        has_quarter_data = game.quarter_scores&.dig(q.to_s).present?
                        current_q_score = game.quarter_scores&.dig(q.to_s, "home") || 0
                        prev_q_score = q > 1 ? (game.quarter_scores&.dig((q-1).to_s, "home") || 0) : 0
                        delta = has_quarter_data ? (current_q_score - prev_q_score) : nil
                        current_q_score_away = game.quarter_scores&.dig(q.to_s, "away") || 0
                        prev_q_score_away = q > 1 ? (game.quarter_scores&.dig((q-1).to_s, "away") || 0) : 0
                        away_delta = has_quarter_data ? (current_q_score_away - prev_q_score_away) : nil
                      %>
                      <div class="font-mono text-lg md:text-xl font-bold <%= 'text-yellow-400' if delta && away_delta && delta > away_delta %>">
                        <%= delta.nil? ? '-' : delta %>
                      </div>
                    <% end %>
                    <div class="font-mono text-lg md:text-xl font-black text-white/60"><%= game.home_score %></div>

                    <!-- Away Row -->
                    <div class="text-left font-bold text-neutral-content truncate pl-2 flex items-center gap-2">
                       <div class="w-1 h-3 rounded-full" style="background-color: <%= game.away_team.css_color %>"></div>
                       <%= game.away_team.label %>
                    </div>
                    <% (1..regular_quarters).each do |q| %>
                      <%
                        has_quarter_data = game.quarter_scores&.dig(q.to_s).present?
                        current_q_score = game.quarter_scores&.dig(q.to_s, "away") || 0
                        prev_q_score = q > 1 ? (game.quarter_scores&.dig((q-1).to_s, "away") || 0) : 0
                        delta = has_quarter_data ? (current_q_score - prev_q_score) : nil
                        current_q_score_home = game.quarter_scores&.dig(q.to_s, "home") || 0
                        prev_q_score_home = q > 1 ? (game.quarter_scores&.dig((q-1).to_s, "home") || 0) : 0
                        home_delta = has_quarter_data ? (current_q_score_home - prev_q_score_home) : nil
                      %>
                      <div class="font-mono text-lg md:text-xl font-bold <%= 'text-yellow-400' if delta && home_delta && delta > home_delta %>">
                        <%= delta.nil? ? '-' : delta %>
                      </div>
                    <% end %>
                    <div class="font-mono text-lg md:text-xl font-black text-white/60"><%= game.away_score %></div>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>

        <div class="flex justify-center gap-4 mt-12" data-share-hide>
          <!-- 점수 수정 모달 트리거 -->
          <button type="button" class="btn btn-primary btn-lg px-12 text-xl italic font-black rounded-2xl shadow-2xl hover:scale-105 active:scale-95 transition-all" onclick="document.getElementById('score_edit_modal').showModal()">
            <%= t('matches.show.edit_scores') %>
          </button>

          <% if @match.paused? %>
            <!-- 경기 종료하기 버튼 (점수 수정 후 결과 확정) -->
            <%= button_to finish_match_club_match_path(@club, @match),
                method: :patch,
                class: "btn btn-success btn-lg px-12 text-xl italic font-black rounded-2xl shadow-2xl hover:scale-105 active:scale-95 transition-all",
                data: { confirm: t('matches.show.finish_match_confirm', default: '경기를 종료하고 결과를 확정하시겠습니까? 이 작업 후에는 점수 수정이 제한됩니다.') } do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <%= t('matches.show.finish_match', default: '경기 종료하기') %>
            <% end %>
          <% end %>
        </div>

        <!-- 점수 수정 모달 -->
        <dialog id="score_edit_modal" class="modal modal-bottom sm:modal-middle text-base-content" data-share-hide>
          <div class="modal-box">
            <h3 class="font-bold text-lg mb-4"><%= t('matches.show.edit_scores_title') %></h3>

            <%= form_with url: update_scores_club_match_path(@club, @match), method: :patch, class: "space-y-4", id: "score_edit_form" do |f| %>
              <%= hidden_field_tag :input_mode, "delta", id: "modal_input_mode" %>

              <!-- Toggle UI -->
              <div class="flex items-center justify-end gap-3 px-1 mb-2">
                <span class="text-xs font-medium opacity-70"><%= t('matches.show.input_mode') %></span>
                <div class="flex items-center bg-base-300 p-1 rounded-xl shadow-inner">
                   <button type="button"
                           id="toggle_delta"
                           class="btn btn-xs rounded-lg transition-all px-3 bg-primary text-primary-content border-none"
                           onclick="switchMode('delta')"><%= t('matches.show.mode_delta') %></button>
                   <button type="button"
                           id="toggle_cumulative"
                           class="btn btn-xs rounded-lg transition-all px-3 bg-transparent text-base-content border-none"
                           onclick="switchMode('cumulative')"><%= t('matches.show.mode_cumulative') %></button>
                </div>
              </div>

              <% @games.each_with_index do |game, index| %>
                <div class="card bg-base-200 p-4 border border-base-300">
                  <div class="flex justify-between items-center mb-2">
                    <div class="text-xs font-bold opacity-50">GAME <%= index + 1 %></div>
                    <div class="text-xs opacity-70">
                      <%= game.home_team.label %> vs <%= game.away_team.label %>
                    </div>
                  </div>

                  <div class="overflow-x-auto">
                    <table class="table table-xs w-full text-center">
                      <thead>
                        <tr>
                          <th class="w-10">Q</th>
                          <th class="text-primary"><%= game.home_team.label %></th>
                          <th class="text-secondary"><%= game.away_team.label %></th>
                        </tr>
                      </thead>
                      <tbody>
                        <% (1..regular_quarters).each do |q| %>
                          <%
                             h_score = game.quarter_scores&.dig(q.to_s, "home") || 0
                             h_prev = q > 1 ? (game.quarter_scores&.dig((q-1).to_s, "home") || 0) : 0
                             h_delta = h_score - h_prev

                             a_score = game.quarter_scores&.dig(q.to_s, "away") || 0
                             a_prev = q > 1 ? (game.quarter_scores&.dig((q-1).to_s, "away") || 0) : 0
                             a_delta = a_score - a_prev
                          %>
                          <tr>
                            <th class="opacity-50"><%= q %></th>
                            <td>
                              <input type="number"
                                     name="scores[<%= game.id %>][quarters][<%= q %>][home]"
                                     value="<%= h_delta %>"
                                     data-delta="<%= h_delta %>"
                                     data-cumulative="<%= h_score %>"
                                     class="score-input input input-xs input-bordered w-full text-center"
                                     min="0">
                            </td>
                            <td>
                              <input type="number"
                                     name="scores[<%= game.id %>][quarters][<%= q %>][away]"
                                     value="<%= a_delta %>"
                                     data-delta="<%= a_delta %>"
                                     data-cumulative="<%= a_score %>"
                                     class="score-input input input-xs input-bordered w-full text-center"
                                     min="0">
                            </td>
                          </tr>
                        <% end %>
                      </tbody>
                    </table>
                  </div>
                </div>
              <% end %>

              <div class="modal-action">
                <button type="button" class="btn" onclick="document.getElementById('score_edit_modal').close()"><%= t('matches.show.cancel') %></button>
                <%= f.submit t('common.save'), class: "btn btn-primary" %>
              </div>
            <% end %>

            <script>
              function switchMode(mode) {
                const inputModeField = document.getElementById('modal_input_mode');
                const inputs = document.querySelectorAll('.score-input');
                const btnDelta = document.getElementById('toggle_delta');
                const btnCum = document.getElementById('toggle_cumulative');

                inputModeField.value = mode;

                if (mode === 'delta') {
                  btnDelta.classList.add('bg-primary', 'text-primary-content');
                  btnDelta.classList.remove('bg-transparent', 'text-base-content');
                  btnCum.classList.remove('bg-primary', 'text-primary-content');
                  btnCum.classList.add('bg-transparent', 'text-base-content');
                } else {
                  btnCum.classList.add('bg-primary', 'text-primary-content');
                  btnCum.classList.remove('bg-transparent', 'text-base-content');
                  btnDelta.classList.remove('bg-primary', 'text-primary-content');
                  btnDelta.classList.add('bg-transparent', 'text-base-content');
                }

                inputs.forEach(input => {
                  if (mode === 'delta') {
                    input.value = input.dataset.delta;
                  } else {
                    input.value = input.dataset.cumulative;
                  }
                });
              }
            </script>
          </div>
          <form method="dialog" class="modal-backdrop">
            <button>close</button>
          </form>
        </dialog>
    </div>
  </div>
  <%= content_tag :script, type: "application/json", id: "share-match-data" do %>
    <%= raw({
      clubName: @club.name,
      matchDate: l(@match.played_on, format: :long),
      matchDateShort: @match.played_on.strftime("%Y%m%d"),
      teams: @teams.map { |team|
        record = team_records[team.id] || { wins: 0, draws: 0, losses: 0 }
        {
          label: team.label,
          color: team.color,
          cssColor: team.css_color,
          wins: record[:wins],
          draws: record[:draws],
          losses: record[:losses],
          members: team.members.map { |m| { name: m.name, position: m.position } }
        }
      },
      games: @games.map { |game|
        {
          homeTeamLabel: game.home_team.label,
          awayTeamLabel: game.away_team.label,
          homeScore: game.home_score,
          awayScore: game.away_score,
          homeColor: game.home_team.css_color,
          awayColor: game.away_team.css_color
        }
      }
    }.to_json) %>
  <% end %>

  <script>
    function fillRR(c,x,y,w,h,r){
      if(typeof r==='number')r=[r,r,r,r];
      c.beginPath();c.moveTo(x+r[0],y);c.lineTo(x+w-r[1],y);
      c.quadraticCurveTo(x+w,y,x+w,y+r[1]);c.lineTo(x+w,y+h-r[2]);
      c.quadraticCurveTo(x+w,y+h,x+w-r[2],y+h);c.lineTo(x+r[3],y+h);
      c.quadraticCurveTo(x,y+h,x,y+h-r[3]);c.lineTo(x,y+r[0]);
      c.quadraticCurveTo(x,y,x+r[0],y);c.closePath();c.fill();
    }
    function posClr(p){return{PG:'#3b82f6',SG:'#22c55e',SF:'#f97316',PF:'#ef4444',C:'#a855f7'}[p]||'#6b7280';}

    function captureAndDownload() {
      var btn = document.getElementById('share-download-btn');
      btn.disabled = true;
      btn.classList.add('loading');

      try {
        var d = JSON.parse(document.getElementById('share-match-data').textContent);
        var canvas = document.createElement('canvas');
        var c = canvas.getContext('2d');
        var W = 1080, P = 48, CW = W - P * 2;
        var tc = d.teams.length;
        var tGap = 20;
        var tW = (CW - (tc - 1) * tGap) / tc;
        var maxM = 0;
        d.teams.forEach(function(t){ if(t.members.length > maxM) maxM = t.members.length; });

        var mH = 28;
        var tCardH = 130 + maxM * mH + 16;
        var gH = 80, gGap = 12;
        var totalH = P + 130 + 32 + tCardH + 40 + d.games.length * (gH + gGap) + 48 + P;

        canvas.width = W; canvas.height = totalH;

        // 배경 그라데이션
        var bg = c.createLinearGradient(0, 0, 0, totalH);
        bg.addColorStop(0, '#0f172a'); bg.addColorStop(1, '#1e293b');
        c.fillStyle = bg; c.fillRect(0, 0, W, totalH);

        // === 헤더 ===
        var y = P;
        c.textAlign = 'center'; c.textBaseline = 'middle';
        c.fillStyle = '#f97316';
        c.font = 'bold 44px system-ui, sans-serif';
        c.fillText(d.clubName, W/2, y + 44);
        c.fillStyle = 'rgba(255,255,255,0.5)';
        c.font = '22px system-ui, sans-serif';
        c.fillText(d.matchDate, W/2, y + 88);

        // 팀 수 배지
        c.fillStyle = 'rgba(249,115,22,0.15)';
        var bTxt = tc + ' Teams';
        c.font = 'bold 14px system-ui, sans-serif';
        var bW = c.measureText(bTxt).width + 24;
        fillRR(c, W/2 - bW/2, y + 102, bW, 26, 13);
        c.fillStyle = '#f97316';
        c.fillText(bTxt, W/2, y + 115);
        y += 130;

        // 구분선
        c.fillStyle = 'rgba(255,255,255,0.06)';
        c.fillRect(P, y, CW, 1);
        y += 32;

        // === 팀 카드 ===
        d.teams.forEach(function(team, i) {
          var x = P + i * (tW + tGap);

          // 카드 배경
          c.fillStyle = 'rgba(255,255,255,0.04)';
          fillRR(c, x, y, tW, tCardH, 12);

          // 팀 색상 상단 바
          c.fillStyle = team.cssColor;
          fillRR(c, x, y, tW, 5, [12, 12, 0, 0]);

          // 팀 라벨
          c.textAlign = 'center';
          c.fillStyle = '#ffffff';
          c.font = 'bold 26px system-ui, sans-serif';
          c.fillText('TEAM ' + team.label, x + tW/2, y + 36);

          // 색상명
          c.fillStyle = 'rgba(255,255,255,0.3)';
          c.font = '14px system-ui, sans-serif';
          c.fillText(team.color, x + tW/2, y + 58);

          // W-D-L 전적
          var rY = y + 82;
          var rW = tW / 3;
          c.font = 'bold 30px system-ui, sans-serif';
          c.fillStyle = '#22c55e'; c.fillText(team.wins.toString(), x + rW * 0.5, rY);
          c.fillStyle = '#ffffff';  c.fillText(team.draws.toString(), x + rW * 1.5, rY);
          c.fillStyle = '#ef4444'; c.fillText(team.losses.toString(), x + rW * 2.5, rY);
          c.font = 'bold 10px system-ui, sans-serif';
          c.fillStyle = 'rgba(255,255,255,0.3)';
          c.fillText('WIN', x + rW * 0.5, rY + 18);
          c.fillText('DRAW', x + rW * 1.5, rY + 18);
          c.fillText('LOSS', x + rW * 2.5, rY + 18);

          // 구분선
          c.fillStyle = 'rgba(255,255,255,0.06)';
          c.fillRect(x + 12, y + 108, tW - 24, 1);

          // 멤버 목록
          c.textAlign = 'left';
          team.members.forEach(function(m, mi) {
            var mY = y + 126 + mi * mH;
            c.fillStyle = 'rgba(255,255,255,0.8)';
            c.font = '15px system-ui, sans-serif';
            c.fillText(m.name, x + 16, mY);

            // 포지션 배지
            c.font = 'bold 11px system-ui, sans-serif';
            var pw = c.measureText(m.position).width + 10;
            c.fillStyle = posClr(m.position);
            fillRR(c, x + tW - 16 - pw, mY - 9, pw, 18, 4);
            c.fillStyle = '#ffffff'; c.textAlign = 'center';
            c.fillText(m.position, x + tW - 16 - pw/2, mY);
            c.textAlign = 'left';
          });
        });

        y += tCardH + 24;

        // 구분선
        c.fillStyle = 'rgba(255,255,255,0.06)';
        c.fillRect(P, y, CW, 1);
        y += 16;

        // 섹션 타이틀
        c.textAlign = 'left';
        c.fillStyle = '#f97316';
        c.font = 'bold 13px system-ui, sans-serif';
        c.fillText('GAME SCOREBOARD', P + 4, y + 8);
        y += 24;

        // === 게임 결과 ===
        d.games.forEach(function(g, i) {
          var gy = y + i * (gH + gGap);
          c.fillStyle = 'rgba(0,0,0,0.3)';
          fillRR(c, P, gy, CW, gH, 10);

          // Game 라벨
          c.textAlign = 'left';
          c.fillStyle = 'rgba(249,115,22,0.6)';
          c.font = 'bold 12px system-ui, sans-serif';
          c.fillText('GAME ' + (i + 1), P + 16, gy + 18);

          c.textAlign = 'center';
          var cx = W / 2, sy = gy + 52;
          var hW = g.homeScore > g.awayScore, aW = g.awayScore > g.homeScore;

          // WIN/LOSE 라벨
          if (hW || aW) {
            c.font = 'bold 12px system-ui, sans-serif';
            c.fillStyle = hW ? '#22c55e' : 'rgba(255,255,255,0.2)';
            c.fillText(hW ? 'WIN' : 'LOSE', cx - 80, sy - 22);
            c.fillStyle = aW ? '#22c55e' : 'rgba(255,255,255,0.2)';
            c.fillText(aW ? 'WIN' : 'LOSE', cx + 80, sy - 22);
          }

          // 홈팀 색상 바 + 라벨
          c.fillStyle = g.homeColor;
          fillRR(c, cx - 240, sy - 12, 4, 24, 2);
          c.fillStyle = '#ffffff';
          c.font = 'bold 20px system-ui, sans-serif';
          c.fillText(g.homeTeamLabel, cx - 200, sy);

          // 홈 점수
          c.fillStyle = hW ? '#fbbf24' : 'rgba(255,255,255,0.8)';
          c.font = 'bold 36px system-ui, sans-serif';
          c.fillText(g.homeScore.toString(), cx - 80, sy + 2);

          // VS
          c.fillStyle = 'rgba(255,255,255,0.2)';
          c.font = 'bold 16px system-ui, sans-serif';
          c.fillText('VS', cx, sy);

          // 어웨이 점수
          c.fillStyle = aW ? '#fbbf24' : 'rgba(255,255,255,0.8)';
          c.font = 'bold 36px system-ui, sans-serif';
          c.fillText(g.awayScore.toString(), cx + 80, sy + 2);

          // 어웨이팀 라벨 + 색상 바
          c.fillStyle = '#ffffff';
          c.font = 'bold 20px system-ui, sans-serif';
          c.fillText(g.awayTeamLabel, cx + 200, sy);
          c.fillStyle = g.awayColor;
          fillRR(c, cx + 236, sy - 12, 4, 24, 2);
        });

        // 푸터
        y += d.games.length * (gH + gGap) + 16;
        c.textAlign = 'center';
        c.fillStyle = 'rgba(255,255,255,0.12)';
        c.font = '12px system-ui, sans-serif';
        c.fillText('BM-Rail', W/2, y + 8);

        // 다운로드
        var link = document.createElement('a');
        link.download = d.clubName + '_' + d.matchDateShort + '.png';
        link.href = canvas.toDataURL('image/png');
        document.body.appendChild(link);
        link.click();
        document.body.removeChild(link);
      } catch(err) {
        console.error('이미지 생성 실패:', err);
        alert('이미지 생성에 실패했습니다: ' + err.message);
      } finally {
        btn.disabled = false;
        btn.classList.remove('loading');
      }
    }
  </script>
