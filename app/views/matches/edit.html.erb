<% content_for :title, t('matches.edit.page_title', date: l(@match.played_on, format: :short)) %>

<div class="max-w-7xl mx-auto">
  <!-- 뒤로가기 -->
  <div class="mb-4">
    <%= link_to club_match_path(@club, @match), class: "btn btn-ghost btn-sm gap-2" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
      <%= t('common.back') %>
    <% end %>
  </div>

  <!-- 페이지 헤더 -->
  <div class="mb-8">
    <h1 class="text-4xl font-bold text-base-content mb-2"><%= t('matches.edit.title') %></h1>
    <p class="text-base-content/60"><%= @club.name %> · <%= l(@match.played_on, format: :long) %></p>
  </div>

  <!-- 폼 카드 -->
  <div class="card bg-base-100 shadow-xl max-w-2xl mx-auto">
    <div class="card-body">
      <%= form_with model: [@club, @match], local: true, class: "space-y-6" do |form| %>
        <!-- 경기 날짜 -->
        <div class="form-control w-full">
          <%= form.label :played_on, t('matches.edit.match_date'), class: "label" %>
          <%= form.date_field :played_on,
              required: true,
              class: "input input-bordered w-full" %>
        </div>

        <!-- 메모 -->
        <div class="form-control w-full">
          <%= form.label :note, t('matches.edit.memo'), class: "label" %>
          <%= form.text_field :note,
              placeholder: t('matches.edit.memo_placeholder'),
              class: "input input-bordered w-full" %>
        </div>

        <!-- 제출 버튼 -->
        <div class="form-control mt-8">
          <%= form.submit t('common.save'), class: "btn btn-primary btn-lg w-full gap-2" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
