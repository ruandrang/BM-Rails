<% content_for :title, t('matches.index.page_title', club_name: @club.name) %>

<div class="max-w-7xl mx-auto">
  <!-- 뒤로가기 -->
  <div class="mb-4">
    <%= link_to club_path(@club), class: "btn btn-ghost btn-sm gap-2" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
      <%= t('common.back') %>
    <% end %>
  </div>

  <!-- 페이지 헤더 -->
  <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4 mb-8">
    <div>
      <h1 class="page-title text-base-content mb-2"><%= t('matches.index.title') %></h1>
      <p class="text-base-content/60"><%= t('matches.index.subtitle', club_name: @club.name) %></p>
    </div>

    <% if @current_membership&.admin? %>
      <%= link_to new_club_match_path(@club), class: "btn btn-primary gap-2" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        <%= t('matches.index.new_match') %>
      <% end %>
    <% end %>
  </div>

  <!-- 경기 목록 -->
  <% if @matches.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      <% @matches.each do |match| %>
        <div class="card-modern cursor-pointer h-full" data-href="<%= club_match_path(@club, match) %>">
          <div class="card-body">
            <!-- 날짜 & 팀 수 -->
            <div class="flex items-center justify-between mb-4">
              <div class="flex items-center gap-2">
                <div class="badge badge-primary badge-lg"><%= t('matches.index.teams_count', count: match.teams_count) %></div>
                <div class="badge badge-outline"><%= t('matches.index.quarters_count', count: match.regular_quarters_count) %></div>
                <% completed_games = match.games.where.not(result: "pending").count rescue 0 %>
                <% total_games = match.games.count rescue 0 %>
                <% if total_games > 0 && completed_games == total_games %>
                  <div class="badge badge-success gap-1">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    <%= t('matches.index.completed') %>
                  </div>
                <% elsif total_games > 0 %>
                  <div class="badge badge-warning gap-1"><%= t('matches.index.in_progress') %></div>
                <% end %>
              </div>
            </div>

            <!-- 날짜 -->
            <h2 class="card-title text-lg flex-nowrap">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              <span class="truncate"><%= l(match.played_on, format: :long) %></span>
            </h2>

            <!-- 메모 -->
            <% if match.note.present? %>
              <p class="text-base-content/60"><%= match.note %></p>
            <% end %>

            <!-- 액션 버튼 -->
            <div class="card-actions justify-end mt-auto">
              <%= link_to edit_club_match_path(@club, match), class: "btn btn-ghost btn-sm" do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                </svg>
              <% end %>
              <%= button_to club_match_path(@club, match), method: :delete, data: { confirm: t('matches.index.delete_confirm') }, class: "btn btn-ghost btn-sm text-error" do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                </svg>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <!-- 빈 상태 -->
    <div class="empty-state">
      <div class="empty-state-icon">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
        </svg>
      </div>
      <h2 class="empty-state-title"><%= t('matches.index.empty.title') %></h2>
      <p class="empty-state-description"><%= t('matches.index.empty.description') %></p>
      <%= link_to new_club_match_path(@club), class: "btn btn-primary gap-2" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        <%= t('matches.index.empty.create_first') %>
      <% end %>
    </div>
  <% end %>
</div>
