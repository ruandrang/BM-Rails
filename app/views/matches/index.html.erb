<% content_for :title, "경기 목록 - #{@club.name}" %>

<div class="max-w-7xl mx-auto">
  <!-- 뒤로가기 -->
  <div class="mb-4">
    <%= link_to club_path(@club), class: "btn btn-ghost btn-sm gap-2" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
      뒤로가기
    <% end %>
  </div>

  <!-- 페이지 헤더 -->
  <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4 mb-8">
    <div>
      <h1 class="text-4xl font-bold text-base-content mb-2">경기 목록</h1>
      <p class="text-base-content/60"><%= @club.name %>의 경기 기록입니다</p>
    </div>

    <%= link_to new_club_match_path(@club), class: "btn btn-primary gap-2" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
      </svg>
      새 경기 만들기
    <% end %>
  </div>

  <!-- 경기 목록 -->
  <% if @matches.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      <% @matches.each do |match| %>
        <div class="card bg-base-100 shadow-xl hover:shadow-2xl transition-all duration-300 cursor-pointer h-full" data-href="<%= club_match_path(@club, match) %>">
          <div class="card-body">
            <!-- 날짜 & 팀 수 -->
            <div class="flex items-center justify-between mb-4">
              <div class="flex items-center gap-2">
                <div class="badge badge-primary badge-lg"><%= match.teams_count %>팀</div>
                <% completed_games = match.games.where.not(result: "pending").count rescue 0 %>
                <% total_games = match.games.count rescue 0 %>
                <% if total_games > 0 && completed_games == total_games %>
                  <div class="badge badge-success gap-1">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    완료
                  </div>
                <% elsif total_games > 0 %>
                  <div class="badge badge-warning gap-1">진행중</div>
                <% end %>
              </div>
            </div>

            <!-- 날짜 -->
            <h2 class="card-title text-lg flex-nowrap">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              <span class="truncate"><%= match.played_on.strftime("%Y년 %m월 %d일") %></span>
            </h2>

            <!-- 메모 -->
            <% if match.note.present? %>
              <p class="text-base-content/60"><%= match.note %></p>
            <% end %>

            <!-- 액션 버튼 -->
            <div class="card-actions justify-end mt-auto">
              <%= link_to edit_club_match_path(@club, match), class: "btn btn-ghost btn-sm" do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                </svg>
              <% end %>
              <%= button_to club_match_path(@club, match), method: :delete, data: { turbo_confirm: "이 경기를 삭제하시겠습니까?" }, class: "btn btn-ghost btn-sm text-error" do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                </svg>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <!-- 빈 상태 -->
    <div class="hero min-h-[400px] bg-base-200 rounded-box">
      <div class="hero-content text-center">
        <div class="max-w-md">
          <div class="text-6xl mb-4">🏆</div>
          <h1 class="text-3xl font-bold mb-4">경기가 없습니다</h1>
          <p class="mb-6 text-base-content/70">
            새 경기를 만들어 팀을 구성하고 결과를 기록하세요!
          </p>
          <%= link_to new_club_match_path(@club), class: "btn btn-primary btn-lg gap-2" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            첫 경기 만들기
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
