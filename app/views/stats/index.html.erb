<% content_for :title, t('stats.index.page_title', club_name: @club.name) %>

<div class="max-w-7xl mx-auto">
  <!-- ë’¤ë¡œê°€ê¸° -->
  <div class="mb-4">
    <%= link_to club_path(@club), class: "btn btn-ghost btn-sm gap-2" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
      <%= t('common.back') %>
    <% end %>
  </div>

  <!-- íŽ˜ì´ì§€ í—¤ë” -->
  <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4 mb-8">
    <div>
      <h1 class="text-4xl font-bold text-base-content mb-2"><%= t('stats.index.title') %></h1>
      <p class="text-base-content/60"><%= t('stats.index.subtitle', club_name: @club.name) %></p>
    </div>

    <!-- ì •ë ¬ ë²„íŠ¼ (JS) -->
    <div class="flex flex-wrap items-center gap-2 p-2 bg-base-200 rounded-lg">
      <span class="text-xs font-bold opacity-50 px-2"><%= t('stats.index.sort.label') %></span>
      <button type="button" class="btn btn-ghost btn-xs gap-1 w-20" data-sort="name"><%= t('stats.index.sort.name') %></button>
      <button type="button" class="btn btn-ghost btn-xs gap-1 w-20" data-sort="position"><%= t('stats.index.sort.position') %></button>
      <button type="button" class="btn btn-ghost btn-xs gap-1 w-20" data-sort="games"><%= t('stats.index.sort.games') %></button>
      <button type="button" class="btn btn-ghost btn-xs gap-1 w-20" data-sort="winrate"><%= t('stats.index.sort.winrate') %></button>
    </div>
  </div>

  <% if @stats.any? %>
    <!-- í†µê³„ ìš”ì•½ ì¹´ë“œ -->
    <% avg_win_rate = @stats.any? ? (@stats.sum { |s| s[:win_rate] } / @stats.size * 100).round(1) : 0 %>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
      <!-- ì„ ìˆ˜ í˜„í™© -->
      <div class="card bg-base-100 shadow-xl border-l-4 border-primary">
        <div class="card-body p-6 flex-row items-center gap-4">
          <div class="p-3 bg-primary/10 rounded-2xl">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
          </div>
          <div>
            <div class="text-sm font-bold opacity-50 uppercase tracking-widest"><%= t('stats.index.active_players') %></div>
            <div class="text-3xl font-black"><%= t('stats.index.players_count', count: @stats.count) %></div>
          </div>
        </div>
      </div>

      <!-- ì„±ê³¼ ì§€í‘œ -->
      <div class="card bg-base-100 shadow-xl border-l-4 border-secondary">
        <div class="card-body p-6 flex-row items-center gap-4">
          <div class="p-3 bg-secondary/10 rounded-2xl">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-secondary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
            </svg>
          </div>
          <div>
            <div class="text-sm font-bold opacity-50 uppercase tracking-widest"><%= t('stats.index.avg_win_rate') %></div>
            <div class="text-3xl font-black text-secondary"><%= avg_win_rate %><span class="text-sm font-normal ml-1">%</span></div>
          </div>
        </div>
      </div>

      <!-- ì›”ê°„ MVP -->
      <% if @monthly_mvp %>
        <div class="card bg-neutral text-neutral-content shadow-xl border-l-4 border-accent">
          <div class="card-body p-6 flex-row items-center gap-4">
            <div class="p-3 bg-accent rounded-2xl">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-black" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
              </svg>
            </div>
            <div>
              <div class="text-sm font-bold text-accent uppercase tracking-widest"><%= t('stats.index.monthly_mvp', month: @mvp_month) %></div>
              <div class="text-2xl font-black truncate max-w-[150px]"><%= @monthly_mvp[:member].name %></div>
            </div>
          </div>
        </div>
      <% else %>
         <div class="card bg-base-100 shadow-xl">
           <div class="card-body p-6 flex-row items-center gap-4 opacity-50">
             <div class="p-3 bg-base-200 rounded-2xl">
               <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                 <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
               </svg>
             </div>
             <div>
               <div class="text-sm font-bold uppercase tracking-widest"><%= t('stats.index.monthly_mvp', month: @mvp_month) %></div>
               <div class="text-sm"><%= t('stats.index.no_data') %></div>
             </div>
           </div>
         </div>
      <% end %>
    </div>

    <!-- í†µê³„ í…Œì´ë¸” -->
    <div class="card bg-base-100 shadow-xl overflow-hidden">
      <div class="card-body p-0">
        <div class="overflow-x-auto">
          <table class="table w-full">
            <thead>
              <tr class="bg-base-200 border-b-2 border-base-300">
                <th class="bg-transparent pl-6">PLAYER</th>
                <th class="bg-transparent text-center">GAMES</th>
                <th class="bg-transparent text-center text-success">W</th>
                <th class="bg-transparent text-center opacity-50">D</th>
                <th class="bg-transparent text-center text-error">L</th>
                <th class="bg-transparent text-center">WIN RATE %</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-base-200" id="stats-list">
              <% @stats.each do |row| %>
                <% win_rate = (row[:win_rate] * 100).round(1) %>
                <tr class="hover:bg-base-200/40 transition-colors stats-row"
                    data-name="<%= row[:member].name %>"
                    data-position="<%= row[:member].position %>"
                    data-games="<%= row[:games] %>"
                    data-winrate="<%= win_rate %>">
                  <td class="pl-6">
                    <div class="flex items-center gap-4">
                      <div>
                        <div class="font-black text-lg"><%= row[:member].name %></div>
                        <div class="flex items-center gap-2 mt-1">
                          <span class="badge badge-sm text-white" style="<%= position_badge_style(row[:member].position) %>">
                            <%= row[:member].position %>
                          </span>
                          <% if row[:member].jersey_number %>
                            <span class="text-xs opacity-60">#<%= row[:member].jersey_number %></span>
                          <% end %>
                        </div>
                      </div>
                    </div>
                  </td>
                  <td class="text-center font-bold text-xl"><%= row[:games] %></td>
                  <td class="text-center text-success font-black text-xl"><%= row[:wins] %></td>
                  <td class="text-center text-base-content/40 font-bold"><%= row[:draws] %></td>
                  <td class="text-center text-error font-black text-xl"><%= row[:losses] %></td>
                  <td class="text-center min-w-[150px]">
                    <div class="flex flex-col gap-1 px-4">
                      <div class="flex justify-between items-end">
                        <span class="text-xs font-black italic"><%= win_rate %>%</span>
                      </div>
                      <progress class="progress progress-primary w-full h-3 rounded-full" value="<%= win_rate %>" max="100"></progress>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  <% else %>
    <!-- ë¹ˆ ìƒíƒœ -->
    <div class="hero min-h-[400px] bg-base-200 rounded-box">
      <div class="hero-content text-center">
        <div class="max-w-md">
          <div class="text-6xl mb-4">ðŸ“Š</div>
          <h1 class="text-3xl font-bold mb-4"><%= t('stats.index.empty.title') %></h1>
          <p class="mb-6 text-base-content/70">
            <%= t('stats.index.empty.description') %>
          </p>
          <%= link_to new_club_match_path(@club), class: "btn btn-primary btn-lg gap-2" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            <%= t('stats.index.empty.create_first') %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<script>
  const initStatsSort = () => {
    if (typeof initSortableList === "function") {
      initSortableList("#stats-list", ".stats-row", { name: "asc", position: "asc" });
    }
  };

  document.addEventListener("turbo:load", initStatsSort);
  document.addEventListener("DOMContentLoaded", initStatsSort);
</script>
