<% content_for :title, "멤버 관리 - #{@club.name}" %>

<div class="max-w-7xl mx-auto">
  <!-- 뒤로가기 -->
  <div class="mb-4">
    <%= link_to club_path(@club), class: "btn btn-ghost btn-sm gap-2" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
      뒤로가기
    <% end %>
  </div>

  <!-- 페이지 헤더 -->
  <div class="mb-8">
    <h1 class="text-4xl font-bold text-base-content mb-2">멤버 관리</h1>
    <p class="text-base-content/60"><%= @club.name %> 멤버 목록입니다</p>
  </div>

  <!-- 포지션별 통계 카드 -->
  <% position_counts = @members.group_by(&:position).transform_values(&:count) %>

  <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4 mb-8">
    <div class="stats shadow bg-primary text-primary-content">
      <div class="stat p-4">
        <div class="stat-title text-primary-content/70 text-xs">총 멤버</div>
        <div class="stat-value text-2xl"><%= @members.count %></div>
      </div>
    </div>
    <% Member::POSITIONS.each do |pos| %>
      <div class="stats shadow" style="background-color: <%= Member::POSITION_COLORS[pos] %>;">
        <div class="stat p-4">
          <div class="stat-title text-white/70 text-xs"><%= pos %></div>
          <div class="stat-value text-2xl text-white"><%= position_counts[pos] || 0 %></div>
          <div class="stat-desc text-white/60 text-xs"><%= position_display(pos) %></div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- 액션 버튼들 -->
  <div class="flex flex-wrap items-center justify-between gap-4 mb-6">
    <div class="flex gap-2">
      <%= link_to new_club_member_path(@club), class: "btn btn-primary gap-2" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        멤버 추가
      <% end %>
    </div>

    <div class="flex gap-2">
      <%= link_to export_csv_club_members_path(@club), class: "btn btn-ghost btn-sm gap-2" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
        </svg>
        CSV 내보내기
      <% end %>

      <%= form_with url: import_csv_club_members_path(@club), local: true, multipart: true, class: "flex items-center gap-2" do %>
        <input type="file" name="file" accept=".csv,text/csv" class="file-input file-input-bordered file-input-xs w-full max-w-[150px]" />
        <button type="submit" class="btn btn-ghost btn-xs">가져오기</button>
      <% end %>
    </div>
  </div>

  <!-- 멤버 목록 -->
  <% if @members.any? %>
    <!-- 정렬 및 안내 -->
    <div class="flex flex-wrap items-center justify-between gap-4 mb-4">
      <div class="flex items-center gap-2 text-sm text-base-content/50">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
        카드 드래그로 순서 변경 (저장됨)
      </div>

      <!-- 정렬 버튼들 -->
      <div class="flex gap-2">
        <button type="button" class="btn btn-ghost btn-xs gap-1" data-sort="name">
          이름
          <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 sort-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16V4m0 0L3 8m4-4l4 4m6 0v12m0 0l4-4m-4 4l-4-4" />
          </svg>
        </button>
        <button type="button" class="btn btn-ghost btn-xs gap-1" data-sort="position">
          포지션
          <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 sort-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16V4m0 0L3 8m4-4l4 4m6 0v12m0 0l4-4m-4 4l-4-4" />
          </svg>
        </button>
        <button type="button" class="btn btn-ghost btn-xs gap-1" data-sort="jersey">
          등번호
          <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 sort-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16V4m0 0L3 8m4-4l4 4m6 0v12m0 0l4-4m-4 4l-4-4" />
          </svg>
        </button>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6" id="member-list" data-sortable-list data-reorder-url="<%= reorder_club_members_path(@club) %>">
      <% @members.each do |member| %>
        <div class="card bg-base-100 shadow-xl hover:shadow-2xl transition-all duration-300 hover:-translate-y-1 cursor-move member-item"
             draggable="true"
             data-member-id="<%= member.id %>"
             data-name="<%= member.name %>"
             data-position="<%= member.position %>"
             data-jersey="<%= member.jersey_number || 999 %>">
          <div class="card-body p-5">
            <div class="flex items-start justify-between">
              <div>
                <h3 class="card-title text-xl mb-2"><%= member.name %></h3>
                <div class="flex items-center gap-2">
                  <span class="badge badge-sm text-white" style="<%= position_badge_style(member.position) %>">
                    <%= member.position %>
                  </span>
                  <% if member.jersey_number %>
                    <span class="badge badge-outline badge-sm font-bold">#<%= member.jersey_number %></span>
                  <% end %>
                </div>
              </div>

              <div class="dropdown dropdown-end">
                <label tabindex="0" class="btn btn-ghost btn-xs btn-circle">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z" />
                  </svg>
                </label>
                <ul tabindex="0" class="dropdown-content z-[1] menu menu-sm p-2 shadow bg-base-100 rounded-box w-36 border border-base-200">
                  <li><%= link_to "수정", edit_club_member_path(@club, member), class: "justify-start" %></li>
                  <li>
                    <%= button_to club_member_path(@club, member),
                        method: :delete,
                        class: "text-error justify-start w-full text-left",
                        data: { turbo_confirm: "정말 삭제할까요?" } do %>
                      삭제
                    <% end %>
                  </li>
                </ul>
              </div>
            </div>

            <div class="mt-4 flex gap-4 text-sm text-base-content/60">
              <% if member.age %>
                <div class="flex flex-col">
                  <span class="text-[10px] uppercase font-bold opacity-50">Age</span>
                  <span class="font-medium text-base-content"><%= member.age %>세</span>
                </div>
              <% end %>
              <% if member.height_cm %>
                <div class="flex flex-col">
                  <span class="text-[10px] uppercase font-bold opacity-50">Height</span>
                  <span class="font-medium text-base-content"><%= member.height_cm %>cm</span>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <!-- 빈 상태 -->
    <div class="hero min-h-[400px] bg-base-200 rounded-box">
      <div class="hero-content text-center">
        <div class="max-w-md">
          <div class="text-6xl mb-4">👥</div>
          <h1 class="text-3xl font-bold mb-4">멤버가 없습니다</h1>
          <p class="mb-6 text-base-content/70">
            클럽에 멤버를 추가하여 팀을 구성하고 경기를 시작하세요!
          </p>
          <%= link_to new_club_member_path(@club), class: "btn btn-primary btn-lg gap-2" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            첫 멤버 추가하기
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<script>
document.addEventListener("DOMContentLoaded", function() {
  const sortButtons = document.querySelectorAll("[data-sort]");
  const memberList = document.getElementById("member-list");

  if (!memberList) return;

  const sortState = {};

  sortButtons.forEach(btn => {
    btn.addEventListener("click", function() {
      const sortKey = this.dataset.sort;
      sortState[sortKey] = sortState[sortKey] === "asc" ? "desc" : "asc";

      const items = Array.from(memberList.querySelectorAll(".member-item"));

      items.sort((a, b) => {
        let aVal = a.dataset[sortKey];
        let bVal = b.dataset[sortKey];

        if (sortKey === "jersey") {
          aVal = parseInt(aVal) || 999;
          bVal = parseInt(bVal) || 999;
        }

        if (sortState[sortKey] === "asc") {
          return aVal > bVal ? 1 : -1;
        } else {
          return aVal < bVal ? 1 : -1;
        }
      });

      items.forEach(item => memberList.appendChild(item));

      // Update button active state
      sortButtons.forEach(b => b.classList.remove("btn-active"));
      this.classList.add("btn-active");
    });
  });
});
</script>
