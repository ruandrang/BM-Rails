<% content_for :title, "멤버 관리 - #{@club.name}" %>

<div class="max-w-7xl mx-auto">
  <!-- 뒤로가기 -->
  <div class="mb-4">
    <%= link_to club_path(@club), class: "btn btn-ghost btn-sm gap-2" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
      뒤로가기
    <% end %>
  </div>

  <!-- 페이지 헤더 -->
  <div class="mb-8">
    <h1 class="text-4xl font-bold text-base-content mb-2">멤버 관리</h1>
    <p class="text-base-content/60"><%= @club.name %> 멤버 목록입니다</p>
  </div>

  <!-- 포지션별 통계 카드 -->
  <% guards = @members.select { |m| m.position == "Guard" }.count %>
  <% forwards = @members.select { |m| m.position == "Forward" }.count %>
  <% centers = @members.select { |m| m.position == "Center" }.count %>

  <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-8">
    <div class="stats shadow bg-primary text-primary-content">
      <div class="stat">
        <div class="stat-title text-primary-content/70">총 멤버</div>
        <div class="stat-value"><%= @members.count %></div>
        <div class="stat-desc text-primary-content/60">명 등록됨</div>
      </div>
    </div>
    <div class="stats shadow bg-base-100">
      <div class="stat">
        <div class="stat-title text-base-content/60">Guard</div>
        <div class="stat-value text-secondary"><%= guards %></div>
        <div class="stat-desc">G 포지션</div>
      </div>
    </div>
    <div class="stats shadow bg-base-100">
      <div class="stat">
        <div class="stat-title text-base-content/60">Forward</div>
        <div class="stat-value text-accent"><%= forwards %></div>
        <div class="stat-desc">F 포지션</div>
      </div>
    </div>
    <div class="stats shadow bg-base-100">
      <div class="stat">
        <div class="stat-title text-base-content/60">Center</div>
        <div class="stat-value text-neutral"><%= centers %></div>
        <div class="stat-desc">C 포지션</div>
      </div>
    </div>
  </div>

  <!-- 액션 버튼들 -->
  <div class="flex flex-wrap items-center justify-between gap-4 mb-6">
    <div class="flex gap-2">
      <%= link_to new_club_member_path(@club), class: "btn btn-primary gap-2" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        멤버 추가
      <% end %>
    </div>

    <div class="flex gap-2">
      <%= link_to export_csv_club_members_path(@club), class: "btn btn-ghost btn-sm gap-2" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
        </svg>
        CSV 내보내기
      <% end %>

      <%= form_with url: import_csv_club_members_path(@club), local: true, multipart: true, class: "flex items-center gap-2" do %>
        <input type="file" name="file" accept=".csv,text/csv" class="file-input file-input-bordered file-input-xs w-full max-w-[150px]" />
        <button type="submit" class="btn btn-ghost btn-xs">가져오기</button>
      <% end %>
    </div>
  </div>

  <!-- 멤버 목록 -->
  <% if @members.any? %>
    <div class="mb-4 flex items-center gap-2 text-sm text-base-content/50">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
      카드 드래그로 순서 변경 (저장됨)
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6" data-sortable-list data-reorder-url="<%= reorder_club_members_path(@club) %>">
      <% @members.each do |member| %>
        <div class="card bg-base-100 shadow-xl hover:shadow-2xl transition-all duration-300 hover:-translate-y-1 cursor-move member-item"
             draggable="true"
             data-member-id="<%= member.id %>">
          <div class="card-body p-5">
            <div class="flex items-start justify-between">
              <div class="flex items-center gap-4">
                <div class="avatar placeholder">
                  <div class="bg-primary text-primary-content rounded-full w-14 ring ring-primary ring-offset-base-100 ring-offset-2">
                    <span class="text-2xl font-bold"><%= member.name[0] %></span>
                  </div>
                </div>
                <div>
                  <h3 class="card-title text-xl"><%= member.name %></h3>
                  <div class="flex items-center gap-2 mt-1">
                    <span class="badge badge-secondary badge-sm"><%= member.position %></span>
                    <% if member.jersey_number %>
                      <span class="badge badge-accent badge-sm font-bold">#<%= member.jersey_number %></span>
                    <% end %>
                  </div>
                </div>
              </div>
              
              <div class="dropdown dropdown-end">
                <label tabindex="0" class="btn btn-ghost btn-xs btn-circle">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z" />
                  </svg>
                </label>
                <ul tabindex="0" class="dropdown-content z-[1] menu p-2 shadow bg-base-100 rounded-box w-32 border border-base-200">
                  <li><%= link_to "수정", edit_club_member_path(@club, member) %></li>
                  <li><%= button_to "삭제", club_member_path(@club, member), method: :delete, class: "text-error", data: { turbo_confirm: "정말 삭제할까요?" } %></li>
                </ul>
              </div>
            </div>

            <div class="mt-4 flex gap-4 text-sm text-base-content/60">
              <% if member.age %>
                <div class="flex flex-col">
                  <span class="text-[10px] uppercase font-bold opacity-50">Age</span>
                  <span class="font-medium text-base-content"><%= member.age %>세</span>
                </div>
              <% end %>
              <% if member.height_cm %>
                <div class="flex flex-col">
                  <span class="text-[10px] uppercase font-bold opacity-50">Height</span>
                  <span class="font-medium text-base-content"><%= member.height_cm %>cm</span>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <!-- 빈 상태 -->
    <div class="hero min-h-[400px] bg-base-200 rounded-box">
      <div class="hero-content text-center">
        <div class="max-w-md">
          <div class="text-6xl mb-4">👥</div>
          <h1 class="text-3xl font-bold mb-4">멤버가 없습니다</h1>
          <p class="mb-6 text-base-content/70">
            클럽에 멤버를 추가하여 팀을 구성하고 경기를 시작하세요!
          </p>
          <%= link_to new_club_member_path(@club), class: "btn btn-primary btn-lg gap-2" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            첫 멤버 추가하기
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
