<% content_for :title, t('members.index.page_title', club_name: @club.name) %>

<div class="max-w-7xl mx-auto">
  <!-- 뒤로가기 -->
  <div class="mb-4">
    <%= link_to club_path(@club), class: "btn btn-ghost btn-sm gap-2" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
      <%= t('common.back') %>
    <% end %>
  </div>

  <!-- 페이지 헤더 -->
  <div class="mb-8">
    <h1 class="page-title text-base-content mb-2"><%= t('members.index.title') %></h1>
    <p class="text-base-content/60"><%= t('members.index.subtitle', club_name: @club.name) %></p>
  </div>

  <!-- 포지션별 통계 카드 -->
  <% position_counts = @members.group_by(&:position).transform_values(&:count) %>

  <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4 mb-8">
    <div class="stats-card-modern">
      <div class="stats-icon" style="background-color: oklch(var(--p) / 0.1);">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z" />
        </svg>
      </div>
      <div class="stats-value"><%= @members.count %></div>
      <div class="stats-label"><%= t('members.index.stats.total') %></div>
    </div>
    <% Member::POSITIONS.each do |pos| %>
      <div class="stats-card-modern">
        <div class="stats-icon" style="background-color: <%= Member::POSITION_COLORS[pos] %>20;">
          <span class="text-xs font-bold" style="color: <%= Member::POSITION_COLORS[pos] %>;"><%= pos %></span>
        </div>
        <div class="stats-value"><%= position_counts[pos] || 0 %></div>
        <div class="stats-label"><%= position_display(pos) %></div>
      </div>
    <% end %>
  </div>

  <!-- 액션 버튼들 (admin 이상) -->
  <% if @current_membership&.admin? %>
    <div class="flex flex-wrap items-center justify-between gap-4 mb-6">
      <div class="flex gap-2">
        <%= link_to new_club_member_path(@club), class: "btn btn-primary gap-2" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
          <%= t('members.index.add_member') %>
        <% end %>
      </div>

      <div class="flex gap-2">
        <%= link_to export_csv_club_members_path(@club), class: "btn btn-ghost btn-sm gap-2" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
          </svg>
          <%= t('members.index.export_csv') %>
        <% end %>

        <%= form_with url: import_csv_club_members_path(@club), local: true, multipart: true, class: "flex flex-nowrap items-center gap-2" do %>
          <input type="file" name="file" accept=".csv,text/csv" class="file-input file-input-bordered file-input-sm w-[260px] md:w-[320px]" />
          <button type="submit" class="btn btn-ghost btn-sm whitespace-nowrap shrink-0"><%= t('members.index.import_csv') %></button>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- 멤버 목록 -->
  <% if @members.any? %>
    <!-- 정렬 컨트롤 (새 경기 페이지와 통일) -->
    <div class="flex flex-wrap items-center gap-2 mb-4 p-2 bg-base-200 rounded-lg justify-end">
      <span class="text-xs font-bold opacity-50 px-2 mr-auto"><%= t('members.index.sort.label') %></span>
      <button type="button" class="btn btn-ghost btn-xs gap-1 w-24" data-sort="name"><%= t('members.index.sort.name') %></button>
      <button type="button" class="btn btn-ghost btn-xs gap-1 w-24" data-sort="position"><%= t('members.index.sort.position') %></button>
      <button type="button" class="btn btn-ghost btn-xs gap-1 w-24" data-sort="height"><%= t('members.index.sort.height') %></button>
      <button type="button" class="btn btn-ghost btn-xs gap-1 w-24" data-sort="winrate"><%= t('members.index.sort.winrate') %></button>
      <button type="button" class="btn btn-ghost btn-xs gap-1 w-24" data-sort="games"><%= t('members.index.sort.games') %></button>
      <button type="button" class="btn btn-ghost btn-xs gap-1 w-24" data-sort="jersey"><%= t('members.index.sort.jersey') %></button>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6" id="member-list">
      <% @members.each do |member| %>
        <% stats = @member_stats[member.id] || { games: 0, win_rate: 0.0 } %>
        <div class="card-modern member-item cursor-pointer relative group"
             onclick="location.href='<%= edit_club_member_path(@club, member) %>'"
             data-name="<%= member.name %>"
             data-position="<%= member.position %>"
             data-jersey="<%= member.jersey_number || 999 %>"
             data-height="<%= member.height_cm || 0 %>"
             data-winrate="<%= stats[:win_rate] %>"
             data-games="<%= stats[:games] %>">
          <div class="card-body p-5">
            <!-- 삭제 버튼 (admin 이상, 우측 상단 절대 위치) -->
            <% if @current_membership&.admin? %>
            <div class="absolute top-2 right-2 opacity-0 group-hover:opacity-100 transition-opacity" onclick="event.stopPropagation();">
              <%= button_to club_member_path(@club, member),
                  method: :delete,
                  form: { onsubmit: "return confirm('#{t('members.index.delete_confirm')}');" },
                  class: "btn btn-ghost btn-xs btn-circle text-error" do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                </svg>
              <% end %>
            </div>
            <% end %>

            <div class="flex items-start justify-between mb-4">
              <div>
                <h3 class="card-title text-xl mb-2"><%= member.name %></h3>
                <div class="flex items-center gap-2">
                  <span class="badge badge-sm text-white" style="<%= position_badge_style(member.position) %>">
                    <%= member.position %>
                  </span>
                  <% if member.jersey_number %>
                    <span class="badge badge-outline badge-sm font-bold">#<%= member.jersey_number %></span>
                  <% end %>
                </div>
              </div>
            </div>

            <div class="grid grid-cols-2 gap-y-2 gap-x-4 text-sm text-base-content/70">
              <% if member.age %>
                <div class="flex flex-col">
                  <span class="text-[10px] uppercase font-bold opacity-50">Age</span>
                  <span class="font-medium"><%= t('members.index.age_suffix', age: member.age) %></span>
                </div>
              <% end %>
              <% if member.height_cm %>
                <div class="flex flex-col">
                  <span class="text-[10px] uppercase font-bold opacity-50">Height</span>
                  <span class="font-medium"><%= t('members.index.height_suffix', height: member.height_cm) %></span>
                </div>
              <% end %>
              <div class="flex flex-col">
                <span class="text-[10px] uppercase font-bold opacity-50">Win Rate</span>
                <span class="font-medium <%= 'text-primary' if stats[:win_rate] >= 0.5 %>"><%= (stats[:win_rate] * 100).round(0) %>%</span>
              </div>
              <div class="flex flex-col">
                <span class="text-[10px] uppercase font-bold opacity-50">Games</span>
                <span class="font-medium"><%= t('members.index.games_suffix', count: stats[:games]) %></span>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <!-- 빈 상태 -->
    <div class="empty-state">
      <div class="empty-state-icon">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
        </svg>
      </div>
      <h2 class="empty-state-title"><%= t('members.index.empty.title') %></h2>
      <p class="empty-state-description"><%= t('members.index.empty.description') %></p>
      <%= link_to new_club_member_path(@club), class: "btn btn-primary gap-2" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        <%= t('members.index.empty.add_first') %>
      <% end %>
    </div>
  <% end %>
</div>

<script>
  const initMembersSort = () => {
    if (typeof initSortableList === "function") {
      initSortableList("#member-list", ".member-item", { name: "asc", position: "asc" });
    }
  };

  document.addEventListener("turbo:load", initMembersSort);
  document.addEventListener("DOMContentLoaded", initMembersSort);
</script>
