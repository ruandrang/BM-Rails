<% content_for :title, t('clubs.show.page_title', name: @club.name, app_name: t('app.name')) %>

<div class="max-w-7xl mx-auto">
  <!-- Îí§Î°úÍ∞ÄÍ∏∞ -->
  <div class="mb-4">
    <%= link_to clubs_path, class: "btn btn-ghost btn-sm gap-2" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
      <%= t('common.back') %>
    <% end %>
  </div>

  <!-- ÌÅ¥ÎüΩ Ìó§Îçî Ïπ¥Îìú -->
  <div class="card bg-gradient-to-r from-primary to-secondary text-primary-content mb-8">
    <div class="card-body">
      <div class="flex flex-col md:flex-row items-center gap-6">
        <div class="text-8xl">
          <%= club_icon(@club.icon) %>
        </div>
        <div class="flex-1 text-center md:text-left">
          <h1 class="text-4xl font-bold mb-2"><%= @club.name %></h1>
          <div class="flex flex-wrap justify-center md:justify-start gap-4 text-primary-content/80">
            <span class="flex items-center gap-2">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
              </svg>
              <%= t('clubs.show.members_count', count: @members_count) %>
            </span>
            <span class="flex items-center gap-2">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
              </svg>
              <%= t('clubs.show.matches_count', count: @matches_count) %>
            </span>
            <% if @club.meeting_days.present? %>
              <span class="flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                <% days = @club.meeting_days.respond_to?(:join) ? @club.meeting_days.join(", ") : @club.meeting_days %>
                <%= t('clubs.show.weekly', days: days) %>
              </span>
            <% end %>
          </div>
          <% if @club.description.present? %>
            <div class="mt-4 text-primary-content/90 text-sm md:text-base whitespace-pre-line bg-white/10 p-3 rounded-lg"><%= @club.description %></div>
          <% end %>
        </div>
        <div class="flex gap-2">
          <% if @current_membership&.admin? %>
            <%= link_to edit_club_path(@club), class: "btn btn-ghost btn-sm" do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
              </svg>
            <% end %>
          <% end %>
          <% if @current_membership&.owner? %>
            <%= button_to club_path(@club), method: :delete, form: { onsubmit: "return confirm('#{t('clubs.show.delete_confirm')}');" }, class: "btn btn-ghost btn-sm text-error" do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
              </svg>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Îπ†Î•∏ Ïï°ÏÖò Ïπ¥ÎìúÎì§ -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-6 gap-6 mb-8">
    <!-- 1. Î©§Î≤Ñ Í¥ÄÎ¶¨ -->
    <%= link_to club_members_path(@club), class: "card-modern" do %>
      <div class="card-body items-center text-center">
        <div class="text-4xl mb-2">üë•</div>
        <h2 class="card-title"><%= t('clubs.show.cards.members.title') %></h2>
        <p class="text-base-content/60 text-sm"><%= t('clubs.show.cards.members.description') %></p>
        <div class="badge badge-primary mt-2"><%= @members_count %></div>
      </div>
    <% end %>

    <!-- 2. ÌåÄÏÉùÏÑ± & Í≤ΩÍ∏∞ -->
    <%= link_to club_matches_path(@club), class: "card-modern" do %>
      <div class="card-body items-center text-center">
        <div class="text-4xl mb-2">üèÜ</div>
        <h2 class="card-title"><%= t('clubs.show.cards.matches.title') %></h2>
        <p class="text-base-content/60 text-sm"><%= t('clubs.show.cards.matches.description') %></p>
        <div class="badge badge-secondary mt-2"><%= @matches_count %></div>
      </div>
    <% end %>

    <!-- 3. ÌÜµÍ≥Ñ -->
    <%= link_to club_stats_path(@club), class: "card-modern" do %>
      <div class="card-body items-center text-center">
        <div class="text-4xl mb-2">üìä</div>
        <h2 class="card-title"><%= t('clubs.show.cards.stats.title') %></h2>
        <p class="text-base-content/60 text-sm"><%= t('clubs.show.cards.stats.description') %></p>
        <div class="badge badge-accent mt-2"><%= t('common.analysis') %></div>
      </div>
    <% end %>

    <!-- 4. Î©§Î≤ÑÏã≠ Í¥ÄÎ¶¨ -->
    <%= link_to club_memberships_path(@club), class: "card-modern" do %>
      <div class="card-body items-center text-center">
        <div class="text-4xl mb-2">ü§ù</div>
        <h2 class="card-title">Î©§Î≤ÑÏã≠</h2>
        <p class="text-base-content/60 text-sm">Ïó≠Ìï† Í¥ÄÎ¶¨</p>
        <div class="badge badge-ghost mt-2"><%= @club.club_memberships.count %>Î™Ö</div>
      </div>
    <% end %>

    <!-- 5. Í∂ÅÌï© Î≥¥Í∏∞ -->
    <a href="#" class="card-modern group">
      <div class="card-body items-center text-center">
        <div class="text-4xl mb-2 group-hover:scale-110 transition-transform">‚ù§Ô∏è</div>
        <h2 class="card-title"><%= t('clubs.show.cards.chemistry.title') %></h2>
        <p class="text-base-content/60 text-sm"><%= t('clubs.show.cards.chemistry.description') %></p>
        <div class="badge badge-error badge-outline mt-2"><%= t('common.coming_soon') %></div>
      </div>
    </a>

    <!-- 7. ÏÉà Í≤ΩÍ∏∞ ÎßåÎì§Í∏∞ (admin Ïù¥ÏÉÅ) -->
    <% if @current_membership&.admin? %>
      <%= link_to new_club_match_path(@club), class: "card-modern !bg-primary !text-primary-content !border-primary" do %>
        <div class="card-body items-center text-center">
          <div class="text-4xl mb-2 text-white">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 inline" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
          </div>
          <h2 class="card-title"><%= t('clubs.show.cards.new_match.title') %></h2>
          <p class="text-primary-content/70 text-sm"><%= t('clubs.show.cards.new_match.description') %></p>
          <div class="badge badge-outline mt-2"><%= t('common.quick_start') %></div>
        </div>
      <% end %>
    <% end %>
  </div>

  <!-- Îç∞Ïù¥ÌÑ∞ Î∞±ÏóÖ ÏÑπÏÖò -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
    <!-- ÏµúÍ∑º Í≤ΩÍ∏∞ -->
    <div class="card-modern-static">
      <div class="card-body">
        <div class="flex items-center justify-between mb-4">
          <h2 class="card-title gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            <%= t('clubs.show.recent_matches.title') %>
          </h2>
          <%= link_to t('common.view_all'), club_matches_path(@club), class: "btn btn-ghost btn-xs" %>
        </div>

        <% if @recent_matches.any? %>
          <div class="overflow-x-auto">
            <table class="table table-sm table-zebra w-full">
              <thead>
                <tr>
                  <th><%= t('common.date') %></th>
                  <th><%= t('common.memo') %></th>
                  <th class="text-right"><%= t('common.action') %></th>
                </tr>
              </thead>
              <tbody>
                <% @recent_matches.each do |match| %>
                  <tr>
                    <td class="whitespace-nowrap font-medium"><%= match.played_on.strftime("%Y.%m.%d") %></td>
                    <td class="max-w-[150px] truncate opacity-70"><%= match.note %></td>
                    <td class="text-right">
                      <%= link_to club_match_path(@club, match), class: "btn btn-ghost btn-xs btn-circle" do %>
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                        </svg>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <div class="text-center py-8 text-base-content/40">
            <p><%= t('clubs.show.recent_matches.empty') %></p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Î©§Î≤Ñ ÎØ∏Î¶¨Î≥¥Í∏∞ -->
    <div class="card-modern-static">
      <div class="card-body">
        <div class="flex items-center justify-between mb-4">
          <h2 class="card-title gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-secondary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
            </svg>
            <%= t('clubs.show.members_preview.title') %>
          </h2>
          <%= link_to t('common.view_all'), club_members_path(@club), class: "btn btn-ghost btn-xs" %>
        </div>

        <% if @preview_members.any? %>
          <div class="grid grid-cols-2 sm:grid-cols-4 gap-3">
            <% @preview_members.each do |member| %>
              <div class="card bg-base-200 p-3">
                <div class="font-bold text-sm truncate"><%= member.name %></div>
                <div class="flex items-center gap-2 mt-1">
                  <span class="badge badge-xs text-white" style="<%= position_badge_style(member.position) %>">
                    <%= member.position %>
                  </span>
                  <% if member.jersey_number %>
                    <span class="text-xs opacity-60">#<%= member.jersey_number %></span>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-8 text-base-content/40">
            <p><%= t('clubs.show.members_preview.empty') %></p>
          </div>
        <% end %>
      </div>
    </div>
  </div>


</div>
