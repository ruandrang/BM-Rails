<% content_for :title, t('clubs.index.page_title', app_name: t('app.name')) %>

<div class="max-w-7xl mx-auto">
  <!-- ÌéòÏù¥ÏßÄ Ìó§Îçî -->
  <div class="mb-8">
    <h1 class="page-title text-base-content mb-2"><%= t('clubs.index.title') %></h1>
    <p class="text-base-content/60"><%= t('clubs.index.subtitle') %></p>
  </div>

  <!-- ÌÜµÍ≥Ñ ÏöîÏïΩ Ïπ¥Îìú -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-8">
    <div class="stats shadow bg-primary text-primary-content">
      <div class="stat">
        <div class="stat-figure text-primary-content/50">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
          </svg>
        </div>
        <div class="stat-title text-primary-content/70"><%= t('clubs.index.stats.total_clubs') %></div>
        <div class="stat-value"><%= @clubs.count %></div>
        <div class="stat-desc text-primary-content/60"><%= t('clubs.index.stats.clubs_operating') %></div>
      </div>
    </div>

    <div class="stats shadow bg-secondary text-secondary-content">
      <div class="stat">
        <div class="stat-figure text-secondary-content/50">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
          </svg>
        </div>
        <div class="stat-title text-secondary-content/70"><%= t('clubs.index.stats.total_members') %></div>
        <div class="stat-value"><%= @total_members %></div>
        <div class="stat-desc text-secondary-content/60"><%= t('clubs.index.stats.all_members_sum') %></div>
      </div>
    </div>

    <div class="stats shadow bg-accent text-accent-content">
      <div class="stat">
        <div class="stat-figure text-accent-content/50">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
          </svg>
        </div>
        <div class="stat-title text-accent-content/70"><%= t('clubs.index.stats.monthly_matches') %></div>
        <div class="stat-value"><%= @monthly_matches %></div>
        <div class="stat-desc text-accent-content/60"><%= l(Time.current, format: '%Y-%m') %></div>
      </div>
    </div>
  </div>

  <!-- Îπ†Î•∏ Ïï°ÏÖò Î≤ÑÌäº -->
  <div class="flex flex-wrap items-center gap-4 mb-8">
    <%= link_to new_club_path, class: "btn btn-primary gap-2" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
      </svg>
      <%= t('clubs.index.new_club') %>
    <% end %>

    <!-- Ï¥àÎåÄ ÏΩîÎìúÎ°ú Ï∞∏Ïó¨ -->
    <%= form_with url: nil, method: :get, local: true, class: "flex items-center gap-2", id: "join-code-form" do %>
      <input type="text" name="code" placeholder="Ï¥àÎåÄ ÏΩîÎìú ÏûÖÎ†•" class="input input-bordered input-sm w-36" maxlength="6" pattern="[A-Za-z0-9]{6}" />
      <button type="submit" class="btn btn-outline btn-sm">Ï∞∏Ïó¨</button>
    <% end %>
    <script>
      document.getElementById('join-code-form')?.addEventListener('submit', function(e) {
        e.preventDefault();
        const code = this.querySelector('input[name="code"]').value.trim().toUpperCase();
        if (code.length === 6) window.location.href = '/clubs/join/' + code;
      });
    </script>
  </div>

  <!-- ÌÅ¥ÎüΩ Î™©Î°ù -->
  <% if @clubs.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @clubs.each do |club| %>
        <%= link_to club_path(club), class: "card bg-base-100 shadow-xl hover:shadow-2xl transition-all duration-300 hover:-translate-y-1 cursor-pointer h-full" do %>
          <div class="card-body flex flex-col h-full">
            <!-- ÌÅ¥ÎüΩ ÏïÑÏù¥ÏΩò & Ïù¥Î¶Ñ -->
            <div class="flex items-center gap-4 mb-4">
              <div class="text-5xl">
                <%= club_icon(club.icon) %>
              </div>
              <div class="flex-1">
                <h2 class="card-title text-2xl">
                  <%= club.name %>
                </h2>
                <% membership = club.membership_for(current_user) %>
                <% if membership %>
                  <% case membership.role %>
                  <% when "owner" %>
                    <span class="badge badge-warning badge-sm">ÏÜåÏú†Ïûê</span>
                  <% when "admin" %>
                    <span class="badge badge-info badge-sm">Ïö¥ÏòÅÏûê</span>
                  <% when "member" %>
                    <span class="badge badge-ghost badge-sm">Î©§Î≤Ñ</span>
                  <% end %>
                <% end %>
              </div>
            </div>

            <!-- ÌÅ¥ÎüΩ Ï†ïÎ≥¥ -->
            <div class="space-y-2">
              <div class="flex items-center gap-2 text-base-content/70">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
                </svg>
                <span><%= t('clubs.index.members_count', count: club.members.count) %></span>
              </div>

              <div class="flex items-center gap-2 text-base-content/70">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
                </svg>
                <span><%= t('clubs.index.matches_count', count: club.matches.count) %></span>
              </div>

              <% if club.matches.any? %>
                <div class="flex items-center gap-2 text-base-content/70">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                  <span><%= t('clubs.index.recent_match', date: club.matches.last.played_on.strftime('%Y-%m-%d')) %></span>
                </div>
              <% end %>
            </div>

            <!-- Ïï°ÏÖò Î≤ÑÌäº ÏòÅÏó≠ -->
            <div class="card-actions justify-end mt-auto">
              <div class="badge badge-primary"><%= t('clubs.index.click_to_manage') %></div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <!-- Îπà ÏÉÅÌÉú -->
    <div class="hero min-h-[400px] bg-base-200 rounded-box">
      <div class="hero-content text-center">
        <div class="max-w-md">
          <div class="text-6xl mb-4">üèÄ</div>
          <h1 class="text-3xl font-bold mb-4"><%= t('clubs.index.empty.title') %></h1>
          <p class="mb-6 text-base-content/70">
            <%= t('clubs.index.empty.description') %>
          </p>
          <%= link_to new_club_path, class: "btn btn-primary btn-lg gap-2" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            <%= t('clubs.index.empty.create_first') %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
