<% content_for :title, t("auth.signup.page_title") %>

<div class="min-h-screen flex items-center justify-center p-4">
  <div class="card bg-base-100 shadow-xl w-full max-w-md">
    <div class="card-body">
      <!-- Î°úÍ≥† & ÌÉÄÏù¥ÌãÄ -->
      <div class="text-center mb-6">
        <div class="text-6xl mb-4">üèÄ</div>
        <h1 class="text-3xl font-bold"><%= t("auth.signup.title") %></h1>
        <p class="text-base-content/60 mt-2"><%= t("auth.signup.subtitle") %></p>
      </div>

      <!-- ÏóêÎü¨ Î©îÏãúÏßÄ -->
      <% if @user.errors.any? %>
        <div class="alert alert-error shadow-lg mb-4">
          <div>
            <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <div>
              <h3 class="font-bold"><%= t("auth.signup.input_error_title") %></h3>
              <ul class="text-sm list-disc list-inside">
                <% @user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      <% end %>

      <!-- ÌöåÏõêÍ∞ÄÏûÖ Ìèº -->
      <%= form_with model: @user, url: registration_path, method: :post, local: true, class: "space-y-4" do |form| %>
        <div class="form-control w-full">
          <%= form.label :name, t("auth.fields.name"), class: "label" %>
          <%= form.text_field :name,
              autocomplete: "name",
              placeholder: t("auth.fields.name_placeholder"),
              class: "input input-bordered w-full" %>
        </div>

        <div class="form-control w-full">
          <%= form.label :email, t("auth.fields.email"), class: "label" %>
          <%= form.email_field :email,
              required: true,
              autocomplete: "email",
              placeholder: "your@email.com",
              class: "input input-bordered w-full" %>
        </div>

        <div class="form-control w-full">
          <%= form.label :password, t("auth.fields.password"), class: "label" %>
          <%= form.password_field :password,
              required: true,
              autocomplete: "new-password",
              placeholder: "‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢",
              class: "input input-bordered w-full" %>
          <label class="label">
            <span class="label-text-alt text-base-content/60"><%= t("auth.signup.password_hint") %></span>
          </label>
        </div>

        <div class="form-control w-full">
          <%= form.label :password_confirmation, t("auth.fields.password_confirmation"), class: "label" %>
          <%= form.password_field :password_confirmation,
              required: true,
              autocomplete: "new-password",
              placeholder: "‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢",
              class: "input input-bordered w-full" %>
        </div>

        <div class="form-control mt-6">
          <%= form.submit t("common.signup"), class: "btn btn-primary btn-lg w-full" %>
        </div>
      <% end %>

      <!-- Î°úÍ∑∏Ïù∏ ÎßÅÌÅ¨ -->
      <div class="divider"><%= t("common.or", default: "OR") %></div>

      <div class="text-center">
        <span class="text-base-content/60"><%= t("auth.signup.have_account") %></span>
        <%= link_to t("common.login"), new_session_path, class: "link link-primary ml-1" %>
      </div>
    </div>
  </div>
</div>
