<% content_for :title, "회원가입 - 농구 클럽 매니저" %>

<div class="min-h-screen flex items-center justify-center p-4">
  <div class="card bg-base-100 shadow-xl w-full max-w-md">
    <div class="card-body">
      <!-- 로고 & 타이틀 -->
      <div class="text-center mb-6">
        <div class="text-6xl mb-4">🏀</div>
        <h1 class="text-3xl font-bold">회원가입</h1>
        <p class="text-base-content/60 mt-2">간단하게 계정을 만들고 시작하세요</p>
      </div>

      <!-- 에러 메시지 -->
      <% if @user.errors.any? %>
        <div class="alert alert-error shadow-lg mb-4">
          <div>
            <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <div>
              <h3 class="font-bold">입력 오류</h3>
              <ul class="text-sm list-disc list-inside">
                <% @user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      <% end %>

      <!-- 회원가입 폼 -->
      <%= form_with model: @user, url: registration_path, method: :post, local: true, class: "space-y-4" do |form| %>
        <div class="form-control w-full">
          <%= form.label :name, "이름", class: "label" %>
          <%= form.text_field :name,
              autocomplete: "name",
              placeholder: "홍길동",
              class: "input input-bordered w-full" %>
        </div>

        <div class="form-control w-full">
          <%= form.label :email, "이메일", class: "label" %>
          <%= form.email_field :email,
              required: true,
              autocomplete: "email",
              placeholder: "your@email.com",
              class: "input input-bordered w-full" %>
        </div>

        <div class="form-control w-full">
          <%= form.label :password, "비밀번호", class: "label" %>
          <%= form.password_field :password,
              required: true,
              autocomplete: "new-password",
              placeholder: "••••••••",
              class: "input input-bordered w-full" %>
          <label class="label">
            <span class="label-text-alt text-base-content/60">최소 6자 이상</span>
          </label>
        </div>

        <div class="form-control w-full">
          <%= form.label :password_confirmation, "비밀번호 확인", class: "label" %>
          <%= form.password_field :password_confirmation,
              required: true,
              autocomplete: "new-password",
              placeholder: "••••••••",
              class: "input input-bordered w-full" %>
        </div>

        <div class="form-control mt-6">
          <%= form.submit "회원가입", class: "btn btn-primary btn-lg w-full" %>
        </div>
      <% end %>

      <!-- 로그인 링크 -->
      <div class="divider">OR</div>

      <div class="text-center">
        <span class="text-base-content/60">이미 계정이 있으신가요?</span>
        <%= link_to "로그인", new_session_path, class: "link link-primary ml-1" %>
      </div>
    </div>
  </div>
</div>
