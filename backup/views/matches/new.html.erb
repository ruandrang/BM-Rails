<% content_for :title, "새 경기 만들기 - #{@club.name}" %>

<div class="max-w-4xl mx-auto">
  <!-- 뒤로가기 -->
  <div class="mb-4">
    <%= link_to club_matches_path(@club), class: "btn btn-ghost btn-sm gap-2" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
      뒤로가기
    <% end %>
  </div>

  <!-- 페이지 헤더 -->
  <div class="mb-8">
    <h1 class="text-4xl font-bold text-base-content mb-2">새 경기 만들기</h1>
    <p class="text-base-content/60">선수를 선택하고 팀 밸런싱을 진행합니다</p>
  </div>

  <!-- 폼 카드 -->
  <div class="card bg-base-100 shadow-xl">
    <div class="card-body">
      <%= form_with model: [@club, @match], local: true, class: "space-y-6" do |form| %>

        <!-- 기본 정보 -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div class="form-control w-full">
            <%= form.label :played_on, "경기 날짜", class: "label" %>
            <%= form.date_field :played_on,
                required: true,
                value: Date.today,
                class: "input input-bordered w-full" %>
          </div>

          <div class="form-control w-full">
            <%= form.label :teams_count, "팀 수", class: "label" %>
            <%= form.select :teams_count,
                [["2팀", 2], ["3팀", 3]],
                {},
                required: true,
                class: "select select-bordered w-full" %>
          </div>
        </div>

        <!-- 메모 -->
        <div class="form-control w-full">
          <%= form.label :note, "메모", class: "label" %>
          <%= form.text_field :note,
              placeholder: "예: 2월 정기 경기",
              class: "input input-bordered w-full" %>
        </div>

        <!-- 팀 색상 선택 -->
        <div class="form-control w-full">
          <label class="label">
            <span class="label-text font-medium">팀 색상</span>
          </label>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <% labels = %w[A B C] %>
            <% 3.times do |index| %>
              <div class="form-control">
                <label class="label">
                  <span class="label-text">팀 <%= labels[index] %></span>
                </label>
                <select name="team_colors[]" class="select select-bordered w-full">
                  <% Team::COLORS.each do |color| %>
                    <option value="<%= color %>" <%= "selected" if Team::COLORS[index] == color %>><%= color %></option>
                  <% end %>
                </select>
              </div>
            <% end %>
          </div>
          <label class="label">
            <span class="label-text-alt text-base-content/60">2팀 경기인 경우 팀 A/B만 사용됩니다</span>
          </label>
        </div>

        <!-- 참가 멤버 선택 -->
        <div class="form-control w-full">
          <label class="label">
            <span class="label-text font-medium">참가 멤버 선택</span>
            <span class="label-text-alt">총 <%= @members.count %>명</span>
          </label>

          <% if @members.any? %>
            <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-3 p-4 bg-base-200 rounded-box">
              <% @members.each do |member| %>
                <label class="cursor-pointer">
                  <input type="checkbox" name="member_ids[]" value="<%= member.id %>" class="hidden peer">
                  <div class="card bg-base-100 peer-checked:bg-primary peer-checked:text-primary-content transition-all duration-200 peer-checked:ring-2 peer-checked:ring-primary">
                    <div class="card-body p-3">
                      <div class="flex items-center gap-2">
                        <div class="avatar placeholder">
                          <div class="bg-base-300 peer-checked:bg-primary-content/20 text-base-content rounded-full w-8">
                            <span class="text-sm"><%= member.name[0] %></span>
                          </div>
                        </div>
                        <div class="flex-1 min-w-0">
                          <div class="font-medium truncate"><%= member.name %></div>
                          <div class="text-xs opacity-70"><%= member.position %></div>
                        </div>
                      </div>
                    </div>
                  </div>
                </label>
              <% end %>
            </div>
          <% else %>
            <div class="alert alert-warning">
              <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
              </svg>
              <span>멤버가 없습니다. 먼저 <%= link_to "멤버를 추가", club_members_path(@club), class: "link link-primary" %>해주세요.</span>
            </div>
          <% end %>
        </div>

        <!-- 제출 버튼 -->
        <div class="form-control mt-8">
          <%= form.submit "팀 생성하기", class: "btn btn-primary btn-lg w-full gap-2" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
