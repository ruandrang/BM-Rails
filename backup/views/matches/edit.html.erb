<% content_for :title, "경기 수정 - #{@match.played_on.strftime('%Y-%m-%d')}" %>

<div class="max-w-2xl mx-auto">
  <!-- 뒤로가기 -->
  <div class="mb-4">
    <%= link_to club_match_path(@club, @match), class: "btn btn-ghost btn-sm gap-2" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
      뒤로가기
    <% end %>
  </div>

  <!-- 페이지 헤더 -->
  <div class="mb-8">
    <h1 class="text-4xl font-bold text-base-content mb-2">경기 정보 수정</h1>
    <p class="text-base-content/60"><%= @club.name %> · <%= @match.played_on.strftime("%Y년 %m월 %d일") %></p>
  </div>

  <!-- 폼 카드 -->
  <div class="card bg-base-100 shadow-xl">
    <div class="card-body">
      <%= form_with model: [@club, @match], local: true, class: "space-y-6" do |form| %>
        <!-- 경기 날짜 -->
        <div class="form-control w-full">
          <%= form.label :played_on, "경기 날짜", class: "label" %>
          <%= form.date_field :played_on,
              required: true,
              class: "input input-bordered w-full" %>
        </div>

        <!-- 메모 -->
        <div class="form-control w-full">
          <%= form.label :note, "메모", class: "label" %>
          <%= form.text_field :note,
              placeholder: "예: 2월 정기 경기",
              class: "input input-bordered w-full" %>
        </div>

        <!-- 제출 버튼 -->
        <div class="form-control mt-8">
          <%= form.submit "저장하기", class: "btn btn-primary btn-lg w-full gap-2" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
