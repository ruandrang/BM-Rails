<% content_for :title, "#{@match.played_on.strftime('%Y-%m-%d')} 경기 - #{@club.name}" %>

<div class="max-w-7xl mx-auto">
  <!-- 뒤로가기 -->
  <div class="mb-4">
    <%= link_to club_matches_path(@club), class: "btn btn-ghost btn-sm gap-2" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
      뒤로가기
    <% end %>
  </div>

  <!-- 경기 헤더 -->
  <div class="card bg-gradient-to-r from-primary to-secondary text-primary-content mb-8">
    <div class="card-body">
      <div class="flex flex-col md:flex-row items-center justify-between gap-4">
        <div class="text-center md:text-left">
          <div class="badge badge-outline mb-2"><%= @match.teams_count %>팀 경기</div>
          <h1 class="text-4xl font-bold mb-2"><%= @match.played_on.strftime("%Y년 %m월 %d일") %></h1>
          <p class="text-primary-content/80"><%= @club.name %></p>
          <% if @match.note.present? %>
            <p class="text-primary-content/60 mt-2"><%= @match.note %></p>
          <% end %>
        </div>
        <div class="flex gap-2">
          <%= link_to edit_club_match_path(@club, @match), class: "btn btn-ghost btn-sm" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
            </svg>
            수정
          <% end %>
          <%= link_to share_club_match_path(@club, @match), class: "btn btn-ghost btn-sm", target: "_blank" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z" />
            </svg>
            공유
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- 팀 카드들 -->
  <% team_records = {} %>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-<%= @match.teams_count %> gap-6 mb-8">
    <% @teams.each do |team| %>
      <% wins = draws = losses = 0 %>
      <% @games.each do |game| %>
        <% next if game.result == "pending" %>
        <% if game.result == "draw" %>
          <% draws += 1 if [game.home_team_id, game.away_team_id].include?(team.id) %>
        <% elsif game.result == "home_win" %>
          <% wins += 1 if game.home_team_id == team.id %>
          <% losses += 1 if game.away_team_id == team.id %>
        <% elsif game.result == "away_win" %>
          <% wins += 1 if game.away_team_id == team.id %>
          <% losses += 1 if game.home_team_id == team.id %>
        <% end %>
      <% end %>
      <% team_records[team.id] = { wins: wins, draws: draws, losses: losses } %>

      <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
          <!-- 팀 헤더 -->
          <div class="flex items-center justify-between mb-4">
            <h2 class="card-title text-2xl">
              팀 <%= team.label %>
              <span class="badge badge-lg" style="background-color: <%= team.color %>; border-color: <%= team.color %>; color: white;"><%= team.color %></span>
            </h2>
          </div>

          <!-- 전적 -->
          <div class="stats stats-horizontal bg-base-200 mb-4">
            <div class="stat place-items-center py-2">
              <div class="stat-title text-xs">승</div>
              <div class="stat-value text-lg text-success"><%= wins %></div>
            </div>
            <div class="stat place-items-center py-2">
              <div class="stat-title text-xs">무</div>
              <div class="stat-value text-lg"><%= draws %></div>
            </div>
            <div class="stat place-items-center py-2">
              <div class="stat-title text-xs">패</div>
              <div class="stat-value text-lg text-error"><%= losses %></div>
            </div>
          </div>

          <!-- 멤버 목록 -->
          <div class="space-y-2">
            <% team.members.each do |member| %>
              <div class="flex items-center gap-3 p-2 bg-base-200 rounded-lg">
                <div class="avatar placeholder">
                  <div class="bg-primary text-primary-content rounded-full w-10">
                    <span><%= member.name[0] %></span>
                  </div>
                </div>
                <div class="flex-1">
                  <div class="font-medium"><%= member.name %></div>
                  <div class="text-xs text-base-content/60">
                    <%= member.position %>
                    <% if member.jersey_number %>
                      · #<%= member.jersey_number %>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- 경기 결과 -->
  <div class="card bg-base-100 shadow-xl">
    <div class="card-body">
      <h2 class="card-title text-2xl mb-6">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
        </svg>
        경기 결과
      </h2>

      <%= form_with url: record_results_club_match_path(@club, @match), method: :patch, local: true do %>
        <div class="space-y-4">
          <% @games.each do |game| %>
            <div class="card bg-base-200">
              <div class="card-body p-4">
                <div class="flex flex-col md:flex-row items-center gap-4">
                  <!-- 홈팀 -->
                  <div class="flex-1 text-center">
                    <div class="text-xl font-bold">팀 <%= game.home_team.label %></div>
                    <div class="badge badge-sm" style="background-color: <%= game.home_team.color %>; border-color: <%= game.home_team.color %>; color: white;"><%= game.home_team.color %></div>
                  </div>

                  <!-- VS & 결과 선택 -->
                  <div class="flex flex-col items-center gap-2">
                    <span class="text-2xl font-bold text-base-content/30">VS</span>
                    <select name="games[<%= game.id %>]" class="select select-bordered select-sm w-40">
                      <option value="pending" <%= "selected" if game.result == "pending" %>>미기록</option>
                      <option value="home_win" <%= "selected" if game.result == "home_win" %>>팀 <%= game.home_team.label %> 승</option>
                      <option value="away_win" <%= "selected" if game.result == "away_win" %>>팀 <%= game.away_team.label %> 승</option>
                      <option value="draw" <%= "selected" if game.result == "draw" %>>무승부</option>
                    </select>
                  </div>

                  <!-- 어웨이팀 -->
                  <div class="flex-1 text-center">
                    <div class="text-xl font-bold">팀 <%= game.away_team.label %></div>
                    <div class="badge badge-sm" style="background-color: <%= game.away_team.color %>; border-color: <%= game.away_team.color %>; color: white;"><%= game.away_team.color %></div>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>

        <div class="form-control mt-6">
          <%= submit_tag "결과 저장", class: "btn btn-primary btn-lg w-full gap-2" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
