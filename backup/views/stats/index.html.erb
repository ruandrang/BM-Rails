<% content_for :title, "통계 - #{@club.name}" %>

<div class="max-w-7xl mx-auto">
  <!-- 뒤로가기 -->
  <div class="mb-4">
    <%= link_to club_path(@club), class: "btn btn-ghost btn-sm gap-2" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
      뒤로가기
    <% end %>
  </div>

  <!-- 페이지 헤더 -->
  <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4 mb-8">
    <div>
      <h1 class="text-4xl font-bold text-base-content mb-2">선수 통계</h1>
      <p class="text-base-content/60"><%= @club.name %> 멤버별 경기 기록</p>
    </div>

    <!-- 정렬 버튼 -->
    <div class="join">
      <%= link_to club_stats_path(@club, sort: "name"),
          class: "btn join-item #{params[:sort] == 'name' || params[:sort].nil? ? 'btn-active' : ''}" do %>
        이름순
      <% end %>
      <%= link_to club_stats_path(@club, sort: "games"),
          class: "btn join-item #{params[:sort] == 'games' ? 'btn-active' : ''}" do %>
        경기수순
      <% end %>
      <%= link_to club_stats_path(@club, sort: "win_rate"),
          class: "btn join-item #{params[:sort] == 'win_rate' ? 'btn-active' : ''}" do %>
        승률순
      <% end %>
    </div>
  </div>

  <% if @stats.any? %>
    <!-- 통계 요약 카드 -->
    <% total_games = @stats.sum { |s| s[:games] } / 2 rescue 0 %>
    <% avg_win_rate = @stats.any? ? (@stats.sum { |s| s[:win_rate] } / @stats.size * 100).round(1) : 0 %>
    <% top_player = @stats.max_by { |s| s[:win_rate] } %>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-8">
      <div class="stats shadow bg-primary text-primary-content">
        <div class="stat">
          <div class="stat-figure text-primary-content/50">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
          </div>
          <div class="stat-title text-primary-content/70">참가 선수</div>
          <div class="stat-value"><%= @stats.count %></div>
          <div class="stat-desc text-primary-content/60">명</div>
        </div>
      </div>

      <div class="stats shadow bg-secondary text-secondary-content">
        <div class="stat">
          <div class="stat-figure text-secondary-content/50">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
            </svg>
          </div>
          <div class="stat-title text-secondary-content/70">평균 승률</div>
          <div class="stat-value"><%= avg_win_rate %>%</div>
          <div class="stat-desc text-secondary-content/60">전체 평균</div>
        </div>
      </div>

      <% if top_player %>
        <div class="stats shadow bg-accent text-accent-content">
          <div class="stat">
            <div class="stat-figure text-accent-content/50">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
              </svg>
            </div>
            <div class="stat-title text-accent-content/70">최고 승률</div>
            <div class="stat-value text-lg"><%= top_player[:member].name %></div>
            <div class="stat-desc text-accent-content/60"><%= (top_player[:win_rate] * 100).round(1) %>%</div>
          </div>
        </div>
      <% end %>
    </div>

    <!-- 통계 테이블 -->
    <div class="card bg-base-100 shadow-xl">
      <div class="card-body p-0">
        <div class="overflow-x-auto">
          <table class="table table-zebra">
            <thead>
              <tr class="bg-base-200">
                <th class="text-center">#</th>
                <th>이름</th>
                <th class="text-center">경기</th>
                <th class="text-center">승</th>
                <th class="text-center">무</th>
                <th class="text-center">패</th>
                <th class="text-center">승률</th>
              </tr>
            </thead>
            <tbody>
              <% @stats.each_with_index do |row, index| %>
                <tr class="hover">
                  <td class="text-center">
                    <% if index == 0 && row[:win_rate] > 0 %>
                      <span class="text-2xl">🥇</span>
                    <% elsif index == 1 && row[:win_rate] > 0 %>
                      <span class="text-2xl">🥈</span>
                    <% elsif index == 2 && row[:win_rate] > 0 %>
                      <span class="text-2xl">🥉</span>
                    <% else %>
                      <span class="text-base-content/50"><%= index + 1 %></span>
                    <% end %>
                  </td>
                  <td>
                    <div class="flex items-center gap-3">
                      <div class="avatar placeholder">
                        <div class="bg-primary text-primary-content rounded-full w-10">
                          <span><%= row[:member].name[0] %></span>
                        </div>
                      </div>
                      <div>
                        <div class="font-bold"><%= row[:member].name %></div>
                        <div class="text-sm text-base-content/60"><%= row[:member].position %></div>
                      </div>
                    </div>
                  </td>
                  <td class="text-center font-medium"><%= row[:games] %></td>
                  <td class="text-center text-success font-medium"><%= row[:wins] %></td>
                  <td class="text-center text-base-content/60"><%= row[:draws] %></td>
                  <td class="text-center text-error font-medium"><%= row[:losses] %></td>
                  <td class="text-center">
                    <% win_rate = (row[:win_rate] * 100).round(1) %>
                    <div class="flex items-center justify-center gap-2">
                      <progress class="progress progress-primary w-16" value="<%= win_rate %>" max="100"></progress>
                      <span class="font-bold"><%= win_rate %>%</span>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  <% else %>
    <!-- 빈 상태 -->
    <div class="hero min-h-[400px] bg-base-200 rounded-box">
      <div class="hero-content text-center">
        <div class="max-w-md">
          <div class="text-6xl mb-4">📊</div>
          <h1 class="text-3xl font-bold mb-4">통계 데이터가 없습니다</h1>
          <p class="mb-6 text-base-content/70">
            경기를 진행하고 결과를 기록하면 선수별 통계가 자동으로 생성됩니다.
          </p>
          <%= link_to new_club_match_path(@club), class: "btn btn-primary btn-lg gap-2" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            첫 경기 만들기
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
